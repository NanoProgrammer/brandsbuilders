---
export interface Props {
  title?: string;
  subtitleAccent?: string;
}

const {
  title = 'Why Alberta businesses',
  subtitleAccent = 'choose us',
} = Astro.props;
---

<section class="py-16 bg-gradient-to-b from-slate-950 to-gray-950">
  <div class="container mx-auto px-6">
    <div class="text-center mb-12">
      <h2 class="text-3xl lg:text-5xl font-bold mb-8 text-white">
        {title}
        <span class="bg-gradient-to-r from-violet-400 to-fuchsia-400 bg-clip-text text-transparent">
          {' '}{subtitleAccent}
        </span>
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Local-first -->
      <div class="text-center">
        <div class="w-16 h-16 bg-gradient-to-br from-violet-500 to-purple-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold mb-2 text-white">Local-first</h3>
        <p class="text-gray-400 text-sm">Based in Alberta, we understand local markets and regulations</p>
      </div>

      <!-- Results-focused -->
      <div class="text-center">
        <div class="w-16 h-16 bg-gradient-to-br from-fuchsia-500 to-pink-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold mb-2 text-white">Results-focused</h3>
        <p class="text-gray-400 text-sm">We measure success by your business growth and ROI</p>
      </div>

      <!-- Fast turnarounds -->
      <div class="text-center">
        <div class="w-16 h-16 bg-gradient-to-br from-indigo-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold mb-2 text-white">Fast turnarounds</h3>
        <p class="text-gray-400 text-sm">Most projects completed in 2–6 weeks, not months</p>
      </div>

      <!-- Modern stack -->
      <div class="text-center">
        <div class="w-16 h-16 bg-gradient-to-br from-emerald-500 to-teal-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold mb-2 text-white">Modern stack</h3>
        <p class="text-gray-400 text-sm">Astro, Next.js, Tailwind — built for performance and scale</p>
      </div>
    </div>
  </div>
</section>
