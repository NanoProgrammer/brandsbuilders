---

<section class="py-24 bg-gradient-to-br from-gray-900/50 to-black-900/60">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-6xl font-black mb-6 bg-gradient-to-r from-violet-400 to-fuchsia-400 bg-clip-text text-transparent">
        What Our Alberta Clients Say
      </h2>
      <p class="text-xl text-gray-300">Real results from real businesses across Calgary, Edmonton, and Airdrie</p>
    </div>
    
    <div class="max-w-6xl mx-auto">
      <!-- Testimonial Slider -->
      <div id="testimonial-slider" class="relative">
        <div class="testimonial-container min-h-96">
          {testimonials.map((testimonial, index) => (
            <div class={`testimonial-slide ${index === 0 ? 'active' : ''}`} data-slide={index}>
              <div class="text-center max-w-4xl mx-auto">
                <!-- Stars -->
                <div class="flex justify-center gap-1 mb-8">
                  {Array.from({length: testimonial.rating}).map(() => (
                    <svg class="w-8 h-8 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                  ))}
                </div>
                
                <!-- Quote -->
                <blockquote class="text-2xl md:text-4xl font-light text-gray-200 mb-10 leading-relaxed">
                  "{testimonial.quote}"
                </blockquote>
                
                <!-- Author -->
                <div class="flex flex-col items-center">
                  <div class="w-16 h-16 bg-gradient-to-br from-violet-500 to-fuchsia-500 rounded-full flex items-center justify-center text-white font-bold text-xl mb-4">
                    {testimonial.avatar}
                  </div>
                  <div class="font-semibold text-xl text-white mb-1">{testimonial.author}</div>
                  <div class="text-violet-400 font-medium">{testimonial.company}</div>
                </div>
              </div>
            </div>
          ))}
        </div>
        
        <!-- Navigation Dots -->
        <div class="flex justify-center mt-12 gap-4">
          {testimonials.map((_, index) => (
            <button 
              class={`nav-dot w-4 h-4 rounded-full transition-all duration-300 ${index === 0 ? 'bg-violet-400 scale-125' : 'bg-gray-600'}`}
              data-slide={index}
            ></button>
          ))}
        </div>
      </div>
    </div>

    <!-- CTA "Ver mÃ¡s testimonios" -->
    <div class="text-center mt-16">
      <a href="/testimonials" class="inline-flex items-center px-8 py-4 bg-gray-800/50 border border-gray-700/50 text-white font-semibold rounded-xl hover:border-violet-500/50 hover:bg-gray-800/70 transition-all duration-300">
        See More Testimonials

        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</section>


<style>
  .testimonial-container {
    position: relative;
  }
  
  .testimonial-slide {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    opacity: 0;
    transform: translateX(50px);
    transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }
  
  .testimonial-slide.active {
    opacity: 1;
    transform: translateX(0);
  }
  
  .nav-dot {
    cursor: pointer;
  }
  
  .nav-dot:hover {
    transform: scale(1.2);
  }
</style>

<script>
  let currentSlide = 0;
  const slides = document.querySelectorAll('.testimonial-slide');
  const dots = document.querySelectorAll('.nav-dot');
  
  function showSlide(index: number) {

    slides.forEach(slide => slide.classList.remove('active'));
    dots.forEach(dot => {
      dot.classList.remove('bg-violet-400', 'scale-125');
      dot.classList.add('bg-gray-600');
    });
    
    slides[index].classList.add('active');
    dots[index].classList.remove('bg-gray-600');
    dots[index].classList.add('bg-violet-400', 'scale-125');
    
    currentSlide = index;
  }
  
  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => showSlide(index));
  });
  
  setInterval(() => {
    currentSlide = (currentSlide + 1) % slides.length;
    showSlide(currentSlide);
  }, 6000);
</script>