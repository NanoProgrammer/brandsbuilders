---
// components/services/ServiceFeatures.astro
const features = [
  {
    title: 'Alberta-Focused Strategy',
    description: 'We understand the local market from Calgary to Edmonton, tailoring strategies for Alberta businesses.',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
    </svg>`
  },
  {
    title: 'Lightning Fast Delivery',
    description: 'Most projects completed within 2-4 weeks. We move fast so you can start growing faster.',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
    </svg>`
  },
  {
    title: 'Mobile-First Design',
    description: 'Every website and design is optimized for mobile devices where 70% of your customers browse.',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
    </svg>`
  },
  {
    title: 'SEO Built-In',
    description: 'Every project includes search engine optimization to help you get found by potential customers.',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
    </svg>`
  },
  {
    title: 'Ongoing Support',
    description: 'We don\'t disappear after launch. Get 90 days of free support and ongoing maintenance options.',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path>
    </svg>`
  },
  {
    title: 'Transparent Pricing',
    description: 'No hidden fees or surprise charges. Fixed pricing with clear deliverables and timelines.',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
    </svg>`
  }
];

const stats = [
  { number: '2-4', label: 'Week Delivery', suffix: 'Weeks' },
  { number: '90', label: 'Day Support', suffix: 'Days' },
  { number: '100', label: 'Projects Done', suffix: '+' },
  { number: '5', label: 'Star Rating', suffix: 'â˜…' }
];
---

<section class="py-20 lg:py-32 bg-white">
  <div class="container mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
        Why Alberta Businesses
        <span class="gradient-text">Choose Us</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        We combine local expertise with cutting-edge technology to deliver results that matter 
        to your business and your bottom line.
      </p>
    </div>

    <!-- Stats Row -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 mb-20">
      {stats.map((stat, index) => (
        <div class={`text-center group animate-fade-in-up animation-delay-${index * 100}`}>
          <div class="relative">
            <div class="text-4xl lg:text-5xl font-bold bg-gradient-to-r from-purple-600 to-cyan-600 bg-clip-text text-transparent mb-2">
              {stat.number}<span class="text-2xl">{stat.suffix}</span>
            </div>
            <div class="text-gray-600 font-medium">{stat.label}</div>
            <!-- Animated underline -->
            <div class="w-12 h-1 bg-gradient-to-r from-purple-600 to-cyan-600 mx-auto mt-2 rounded-full opacity-0 group-hover:opacity-100 transition-opacity"></div>
          </div>
        </div>
      ))}
    </div>

    <!-- Features Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {features.map((feature, index) => (
        <div class={`group p-8 rounded-2xl border border-gray-100 hover:border-purple-200 hover:shadow-xl transition-all duration-500 animate-fade-in-up animation-delay-${index * 150}`}>
          <!-- Icon -->
          <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-purple-100 to-cyan-100 rounded-2xl text-purple-600 mb-6 group-hover:scale-110 group-hover:bg-gradient-to-r group-hover:from-purple-600 group-hover:to-cyan-600 group-hover:text-white transition-all duration-300">
            <Fragment set:html={feature.icon} />
          </div>

          <!-- Content -->
          <h3 class="text-xl font-bold text-gray-900 mb-4 group-hover:gradient-text transition-all">
            {feature.title}
          </h3>
          
          <p class="text-gray-600 leading-relaxed">
            {feature.description}
          </p>

          <!-- Hover Effect Line -->
          <div class="w-0 h-0.5 bg-gradient-to-r from-purple-600 to-cyan-600 mt-6 group-hover:w-full transition-all duration-300"></div>
        </div>
      ))}
    </div>

    <!-- Bottom Section -->
    <div class="mt-20 text-center">
      <div class="glass-card max-w-4xl mx-auto p-8 lg:p-12">
        <h3 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-6">
          Ready to Transform Your 
          <span class="gradient-text">Digital Presence?</span>
        </h3>
        <p class="text-xl text-gray-600 mb-8">
          Join 100+ Alberta businesses that trust us with their digital success. 
          Let's build something amazing together.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="btn-primary group">
            <span>Start Your Project</span>
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          <a href="tel:+1-403-555-0123" class="btn-secondary group">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <span>Call Us Today</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>