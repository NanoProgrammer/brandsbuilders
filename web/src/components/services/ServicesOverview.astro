---

<section class="py-20 lg:py-32 bg-gray-50">
  <div class="container mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
        Complete Digital Solutions for
        <span class="gradient-text">Alberta Businesses</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        From small startups to established companies, we provide end-to-end digital services 
        that help you stand out in the competitive Alberta market.
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
      {services.map((service, index) => (
        <div class={`glass-card group hover:scale-105 transition-all duration-500 animate-fade-in-up animation-delay-${index * 200}`}>
          <!-- Service Icon -->
          <div class={`inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r ${service.color} rounded-2xl text-2xl mb-6 group-hover:scale-110 transition-transform`}>
            {service.icon}
          </div>

          <!-- Service Content -->
          <h3 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-4 group-hover:gradient-text transition-all">
            {service.title}
          </h3>
          
          <p class="text-gray-600 text-lg mb-6 leading-relaxed">
            {service.description}
          </p>

          <!-- Features List -->
          <div class="grid grid-cols-2 gap-3 mb-8">
            {service.features.map((feature) => (
              <div class="flex items-center text-gray-700">
                <svg class="w-5 h-5 text-green-500 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-sm font-medium">{feature}</span>
              </div>
            ))}
          </div>

          <!-- Learn More Link -->
          <a href="#packages" class="inline-flex items-center text-purple-600 hover:text-cyan-600 font-semibold group/link transition-colors">
            <span>Learn More</span>
            <svg class="w-4 h-4 ml-2 group-hover/link:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      ))}
    </div>

    <!-- Bottom CTA -->
    <div class="text-center mt-16">
      <div class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-600 to-cyan-600 text-white rounded-full font-semibold hover:scale-105 transition-transform cursor-pointer">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
        <span>Not sure which service you need? Let's talk!</span>
      </div>
    </div>
  </div>
</section>