---
const extras = [
  {
    name: 'Web Design',
    href: '/web-design',
    desc: 'Landing pages, 3–7 page sites, performance and accessibility upgrades.',
    points: ['Campaign Landing', '3–7 page sites', 'Performance Boost', 'Accessibility AA'],
  },
  {
    name: 'Branding',
    href: '/branding',
    desc: 'Identity systems, messaging kits and social template libraries.',
    points: ['Logo & variants', 'Identity system', 'Messaging kit', 'Social templates'],
  },
  {
    name: 'Local SEO',
    href: '/local-seo',
    desc: 'On-page packs, schema expansion, GBP setup and reviews engine.',
    points: ['On-page (key URLs)', 'Schema expansion', 'GBP setup', 'Reviews engine'],
  },
];
---

<section id="extras" class="py-20 bg-slate-950">
  <div class="container mx-auto px-6">
    <div class="text-center mb-12">
      <h2 class="text-3xl lg:text-4xl font-bold text-white">Extras</h2>
      <p class="text-slate-400 mt-2">Start focused. Expand as results roll in.</p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
      {extras.map((x, i) => (
        <a href={x.href}
           class="group relative overflow-hidden rounded-2xl border border-slate-800 bg-white/5 p-6 hover:border-violet-500/40 hover:bg-violet-500/10 transition"
           style={`animation: fade-in .6s both; animation-delay:${i*120}ms`}>
          <div class="pointer-events-none absolute -top-24 -right-24 h-56 w-56 rounded-full bg-gradient-to-br from-violet-500/15 to-fuchsia-500/15 blur-2xl"></div>

          <h3 class="text-white font-semibold">{x.name}</h3>
          <p class="text-slate-300 mt-1">{x.desc}</p>

          <ul class="mt-4 space-y-2">
            {x.points.map((p) => (
              <li class="text-slate-300 text-sm inline-flex items-center gap-2">
                <svg class="w-4 h-4 text-violet-300" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                {p}
              </li>
            ))}
          </ul>

          <span class="mt-4 inline-flex items-center gap-2 text-violet-300">
            View details
            <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4-4 4M21 12H3"/>
            </svg>
          </span>
        </a>
      ))}
    </div>
  </div>

  <style>
    @keyframes fade-in {from{opacity:0;transform:translateY(8px)} to{opacity:1;transform:none}}
  </style>
</section>
