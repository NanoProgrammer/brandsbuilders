<section class="relative bg-slate-950 text-white py-28 overflow-hidden border-t border-slate-800">

  <!-- Massive glow -->
  <div class="absolute inset-0 bg-gradient-to-r from-orange-500/20 via-pink-500/20 to-fuchsia-600/20 blur-3xl"></div>

  <div class="relative container mx-auto px-6 max-w-4xl text-center">

    <div class="reveal">
      <h2 class="text-3xl lg:text-4xl font-semibold">
        Ready to see your website built upfront?
      </h2>

      <p class="mt-5 text-slate-300 max-w-2xl mx-auto">
        Apply to get your website built first, if you qualify.
    
      </p>

      <a
        href="/apply"
        class="inline-block mt-8 px-10 py-4 rounded-xl font-semibold 
               bg-gradient-to-r from-orange-500 via-pink-500 to-fuchsia-600
               text-white shadow-lg shadow-fuchsia-600/30
               hover:scale-[1.03] transition transform"
      >
