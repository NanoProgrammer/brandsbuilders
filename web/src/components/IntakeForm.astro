<section id="intake-section" class="bg-slate-950 py-20">
  <div class="container mx-auto px-6 max-w-3xl">
    <h2 class="text-2xl font-semibold text-white mb-2">
      Application
    </h2>

    <p class="text-slate-400 mb-8">
      This is a short screening form. We only respond if there is a clear fit.
    </p>

    <form
      name="free-client-acquisition-consulting"
      method="POST"
      action="/thank-you"
      data-netlify="true"
      netlify-honeypot="bot-field"
      class="space-y-5"
    >
      <input type="hidden" name="form-name" value="free-client-acquisition-consulting" />
      <p class="hidden"><input name="bot-field" /></p>

      <input
        name="name"
        required
        placeholder="Name"
        class="w-full bg-slate-900 border border-slate-700 px-4 py-3 text-white"
      />

      <input
        name="email"
        type="email"
        required
        placeholder="Email"
        class="w-full bg-slate-900 border border-slate-700 px-4 py-3 text-white"
      />

      <input
        name="business"
        required
        placeholder="Business name"
        class="w-full bg-slate-900 border border-slate-700 px-4 py-3 text-white"
      />

      <input
        name="website"
        required
        placeholder="Website"
        class="w-full bg-slate-900 border border-slate-700 px-4 py-3 text-white"
      />

      <input
        name="city"
        required
        placeholder="City (Alberta)"
        class="w-full bg-slate-900 border border-slate-700 px-4 py-3 text-white"
      />

      <textarea
        name="context"
        rows="4"
        placeholder="Briefly describe your service and what feels broken today"
        class="w-full bg-slate-900 border border-slate-700 px-4 py-3 text-white"
      ></textarea>

      <button
        type="submit"
        class="border border-slate-600 px-6 py-3 text-white hover:border-slate-400 transition"
      >
        Submit application
      </button>
    </form>

  </div>
</section>
