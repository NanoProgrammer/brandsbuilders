---
<section id="portfolio" class="py-24 bg-slate-950 relative overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,rgba(139,92,246,0.3)_0%,transparent_70%)]"></div>
  </div>

  <div class="container mx-auto px-6 relative z-10">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-5xl lg:text-7xl font-black mb-6">
        Projects we are
        <span class="bg-gradient-to-r from-violet-400 to-fuchsia-400 bg-clip-text text-transparent">
          proud of
        </span>
      </h2>
      <p class="text-xl text-slate-400 max-w-3xl mx-auto leading-relaxed">
        Real results for real businesses across Alberta.
      </p>
    </div>

    <!-- Grid (uno a uno) -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">

      <!-- Luxe Med Spa -->
      <article class="group rounded-2xl overflow-hidden border border-slate-800 bg-slate-900/50 hover:border-violet-500/40 transition">
        <a href="/portfolio/luxe-med-spa"   class="block relative aspect-[4/3] overflow-hidden" aria-label="Open Luxe Med Spa case study">
          <img src="/portfolio/luxe-med-spa.jpg" alt="Luxe Med Spa — rebrand y sitio web" loading="lazy" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" />
          <span class="absolute top-3 left-3 px-2.5 py-1 rounded-full text-xs bg-black/50 border border-white/10 text-white">
            Healthcare &amp; Beauty
          </span>
        </a>
        <div class="p-5">
          <h3 class="text-white font-semibold text-lg mb-1">
            <a href="/portfolio/luxe-med-spa"   class="hover:underline">Luxe Med Spa</a>
          </h3>
          <p class="text-slate-300 text-sm">300% more online bookings · First month</p>
          <div class="mt-4">
            <a href="/portfolio/luxe-med-spa"   aria-label="View project Luxe Med Spa" class="inline-flex items-center gap-2 text-violet-300 hover:text-white text-sm font-medium">
              View project
              <svg class="w-4 h-4 transition-transform group-hover:translate-x-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      </article>

      <!-- Mountain View Dental -->
      <article class="group rounded-2xl overflow-hidden border border-slate-800 bg-slate-900/50 hover:border-violet-500/40 transition">
        <a href="/portfolio/mountain-view-dental"   class="block relative aspect-[4/3] overflow-hidden" aria-label="Open Mountain View Dental case study">
          <img src="/portfolio/mountain-dental.jpg" alt="Mountain View Dental — sitio moderno con booking" loading="lazy" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" />
          <span class="absolute top-3 left-3 px-2.5 py-1 rounded-full text-xs bg-black/50 border border-white/10 text-white">
            Healthcare
          </span>
        </a>
        <div class="p-5">
          <h3 class="text-white font-semibold text-lg mb-1">
            <a href="/portfolio/mountain-view-dental"   class="hover:underline">Mountain View Dental</a>
          </h3>
          <p class="text-slate-300 text-sm">60% fewer phone calls · 3 months</p>
          <div class="mt-4">
            <a href="/portfolio/mountain-view-dental"   aria-label="View project Mountain View Dental" class="inline-flex items-center gap-2 text-violet-300 hover:text-white text-sm font-medium">
              View project
              <svg class="w-4 h-4 transition-transform group-hover:translate-x-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      </article>

      <!-- Alberta Solar Co -->
