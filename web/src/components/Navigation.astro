---
// Navigation.astro
---
<nav class="fixed top-0 left-0 right-0 z-50 bg-slate-950/80 backdrop-blur-md border-b border-slate-800">
  <div class="container mx-auto px-4 sm:px-6">
    <div class="flex items-center justify-between h-16 sm:h-20">

      <!-- Logo -->
      <a href="/" class="flex items-center gap-3">
        <img src="/logo.avif" alt="BrandsBuilders logo" class="h-8 w-8" />
        <span class="text-lg sm:text-xl font-medium text-white">
          BrandsBuilders
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-8">
        <a href="/" class="text-slate-300 hover:text-white transition">Home</a>
        <a href="/process" class="text-slate-300 hover:text-white transition">How It Works</a>
        <a href="/about" class="text-slate-300 hover:text-white transition">About</a>
        <a href="/proof" class="text-slate-300 hover:text-white transition">Proof</a>
        <a href="/faq" class="text-slate-300 hover:text-white transition">FAQ</a>

        <!-- Primary CTA -->
        <a
          href="/apply"
          class="ml-4 px-6 py-2.5 border border-slate-600 text-white rounded-lg hover:border-white transition"
        >
          Book Free Website Audit
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        class="lg:hidden w-10 h-10 flex items-center justify-center text-white"
        id="mobile-menu-btn"
        aria-label="Toggle menu"
      >
        <svg id="hamburger-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="lg:hidden hidden bg-slate-950 border-t border-slate-800">
    <div class="container mx-auto px-4 sm:px-6 py-6 flex flex-col gap-4">
      <a href="/" class="text-slate-300 hover:text-white transition">Home</a>
      <a href="/process" class="text-slate-300 hover:text-white transition">How It Works</a>
      <a href="/about" class="text-slate-300 hover:text-white transition">About</a>
      <a href="/proof" class="text-slate-300 hover:text-white transition">Proof</a>
      <a href="/faq" class="text-slate-300 hover:text-white transition">FAQ</a>

      <a
        href="/apply"
        class="mt-4 px-6 py-3 border border-slate-600 text-white rounded-lg text-center hover:border-white transition"
      >
        Book Free Website Audit
      </a>
    </div>
  </div>
</nav>

