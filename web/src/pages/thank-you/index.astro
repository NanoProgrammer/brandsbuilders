---
// src/pages/thank-you.astro
import Layout from '../../layouts/Layout.astro';

const seo = {
  title: 'Request Received — BrandsBuilders',
  description: 'Your request has been received. We’ll review your information and follow up shortly.',
  canonical: 'https://brandsbuilders.agency/thank-you'
};
---

<Layout seo={seo}>
  <section class="bg-slate-950 min-h-screen flex items-center">
    <div class="container mx-auto px-6 max-w-3xl text-center">

      <p class="text-sm uppercase tracking-widest text-slate-500 mb-6">
        Submission confirmed
      </p>

      <h1 class="text-4xl sm:text-5xl font-semibold text-white mb-6">
        Your request has been received
      </h1>

      <p class="text-lg text-slate-400 mb-10 leading-relaxed">
        We’re reviewing your information to determine fit and next steps.
        If there’s alignment, you’ll hear from us shortly.
      </p>

      <div class="bg-slate-900/50 border border-slate-800 rounded-2xl p-6 text-left mb-12">
        <ul class="space-y-3 text-slate-300 text-sm">
          <li><strong class="text-slate-200">Review time:</strong> within 1 business day</li>
          <li><strong class="text-slate-200">Hours:</strong> 9:00 AM – 9:00 PM (Alberta)</li>
          <li><strong class="text-slate-200">Contact:</strong> email first unless otherwise requested</li>
        </ul>
      </div>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href="/"
          class="inline-flex items-center justify-center px-8 py-4 rounded-xl bg-white text-slate-950 font-medium hover:bg-slate-200 transition"
        >
          Return to homepage
        </a>

        <a
          href="/apply"
          class="inline-flex items-center justify-center px-8 py-4 rounded-xl border border-slate-700 text-slate-300 hover:border-slate-500 hover:text-white transition"
        >
          View consultation details
        </a>
      </div>

      <p class="mt-16 text-sm text-slate-500">
        BrandsBuilders · Alberta, Canada
      </p>

    </div>
  </section>
</Layout>
