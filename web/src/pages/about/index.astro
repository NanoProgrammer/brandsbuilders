---
// src/pages/about.astro — Growth Partner Alberta (updated)
import Layout from '../../layouts/Layout.astro';

const seo = {
  title: 'About — BrandsBuilders Agency | Alberta, Canada',
  description:
    "BrandsBuilders is a Growth Partner in Alberta, Canada. We design fast, accessible websites and operate Local SEO, CRO and pragmatic ads for owner‑led SMBs (2–10 staff) with high‑ticket services across Calgary, Airdrie, Edmonton, Red Deer and Lethbridge.",
  keywords:
    'About BrandsBuilders, Growth Partner Alberta, Canadian web studio, Alberta web development, Local SEO Alberta, CRO, WCAG, PIPEDA',
  canonical: 'https://brandsbuilders.agency/about'
};

// Team (de‑emphasized leadership; team‑first)
const team = [
  { name: 'A. Patel', role: 'Frontend & Performance', avatar: 'AP', skills: ['Astro/Next', 'CWV', 'Accessibility'] },
  { name: 'M. Tremblay', role: 'Technical SEO', avatar: 'MT', skills: ['On‑page', 'Schema', 'Sitemaps'] },
  { name: 'E. Nguyen', role: 'Content Ops', avatar: 'EN', skills: ['IA', 'UX Writing'] },
  { name: 'S. Gonzalez', role: 'Founder — Strategy & Delivery', avatar: 'SG', skills: ['Scope & Milestones', 'CRO/A/B'] }
];

const values = [
  {
    title: 'Client‑first, Canadian straightforward',
    description: 'Clear scopes, realistic timelines and plain language. We ship, measure and improve — no fluff.',
    icon: 'M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z'
  },
  {
    title: 'Quality, speed & accessibility',
    description: 'Mobile Lighthouse ≥90 targets, LCP <2.5s, WCAG 2.1 A/AA essentials, documented trade‑offs.',
    icon: 'M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z'
  },
  {
    title: 'Privacy & compliance (Canada)',
    description: 'PIPEDA‑aware forms and consent, minimal tracking, and client‑owned accounts by default.',
    icon: 'M15 12a3 3 0 11-6 0 3 3 0 016 0z M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z'
  },
  {
    title: 'Iteration over hype',
    description: 'Audit → foundations → Local SEO/GBP & content → CRO/A/B. Systems over one‑off deliverables.',
    icon: 'M13 10V3L4 14h7v7l9-11h-7z'
  }
];
---

<Layout seo={seo}>
  <!-- Hero -->
  <section class="relative flex items-center justify-center overflow-hidden px-4 sm:px-8 lg:px-16 xl:px-32 py-24 lg:py-32">
    <div class="absolute inset-0 bg-gradient-to-br from-gray-950 via-gray-900 to-slate-900"></div>

    <!-- Animated blobs -->
    <div class="absolute inset-0 opacity-10 pointer-events-none">
      <div class="absolute top-1/4 left-1/6 w-64 h-64 bg-violet-600 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-1/3 right-1/5 w-48 h-48 bg-fuchsia-600 rounded-full blur-3xl animate-pulse" style="animation-delay: 3s;"></div>
    </div>

    <div class="container mx-auto px-6 relative z-10 text-center">
      <div class="max-w-4xl mx-auto">
        <div class="inline-block px-4 py-2 bg-gray-800/50 border border-gray-700/50 rounded-full text-sm text-violet-400 font-medium mb-6">
          Alberta • Canada (en‑CA)
        </div>

        <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-black leading-tight mb-8">
          We operate
          <span class="bg-gradient-to-r from-violet-400 to-fuchsia-400 bg-clip-text text-transparent">growth systems</span>
          for Alberta owner‑led businesses
        </h1>

        <p class="text-xl sm:text-2xl text-gray-400 leading-relaxed mb-12 max-w-3xl mx-auto">
          Web development, Local SEO, CRO and pragmatic ads. Foundations first, measurement always. CAD billing, GST, PIPEDA‑aware, client‑owned accounts.
        </p>

        <div class="flex flex-col sm:flex-row gap-6 justify-center">
          <a href="/sprint" class="px-8 py-4 bg-gradient-to-r from-violet-600 to-fuchsia-600 text-white font-semibold rounded-xl hover:scale-105 transition">Start the 72‑Hour Sprint</a>
          <a href="/onboarding" class="px-8 py-4 border border-gray-600 text-gray-300 font-semibold rounded-xl hover:border-violet-500 hover:text-white transition">Book an Onboarding Call</a>
        </div>

        <!-- ICP badges -->
        <div class="mt-8 flex flex-wrap items-center justify-center gap-2 text-xs text-slate-400">
          <span class="px-3 py-1 rounded-full border border-slate-700">2–10 staff</span>
          <span class="px-3 py-1 rounded-full border border-slate-700">$250k–$1.5M CAD</span>
          <span class="px-3 py-1 rounded-full border border-slate-700">High‑ticket services</span>
          <span class="px-3 py-1 rounded-full border border-slate-700">Calgary • Airdrie • Edmonton • Red Deer • Lethbridge</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Story -->
  <section class="py-24 bg-slate-950 relative overflow-hidden">
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,rgba(139,92,246,0.3)_0%,transparent_70%)]"></div>
    </div>

    <div class="container mx-auto px-6 relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div>
          <h2 class="text-4xl lg:text-5xl font-bold mb-8">Our <span class="bg-gradient-to-r from-violet-400 to-fuchsia-400 bg-clip-text text-transparent">Story</span></h2>
          <div class="space-y-6 text-slate-400 leading-relaxed">
            <p>Born in Alberta, serving Canada. We keep scopes tight, move fast on foundations, and focus on outcomes: faster pages, clearer UX, higher conversion, cleaner measurement.</p>
            <p>Deliverables live in your accounts from day one (Vercel/Netlify/Cloudflare/Shopify, GA4/GSC). We ship against milestones, document trade‑offs, and maintain AA‑level accessibility essentials.</p>
            <p>Canada‑ready by default: CAD invoices, GST, privacy & consent patterns aligned to PIPEDA, agreements under Alberta law.</p>
          </div>
        </div>

        <div class="relative">
          <div class="bg-gradient-to-br from-violet-900/30 to-fuchsia-900/30 rounded-3xl p-8 border border-violet-500/20">
            <div class="grid grid-cols-2 gap-6">
              <div class="text-center"><div class="text-3xl font-bold text-violet-400 mb-2">50+</div><div class="text-slate-400 text-sm">Clients helped</div></div>
              <div class="text-center"><div class="text-3xl font-bold text-fuchsia-400 mb-2">75+</div><div class="text-slate-400 text-sm">Projects shipped</div></div>
              <div class="text-center"><div class="text-3xl font-bold text-indigo-400 mb-2">90+</div><div class="text-slate-400 text-sm">Mobile LH targets</div></div>
              <div class="text-center"><div class="text-3xl font-bold text-emerald-400 mb-2">A/AA</div><div class="text-slate-400 text-sm">Accessibility baseline</div></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Team -->
  <section class="py-24 bg-slate-900 relative overflow-hidden">
    <div class="container mx-auto px-6 relative z-10">
      <div class="text-center mb-16">
        <h2 class="text-4xl lg:text-5xl font-bold mb-8">Meet the <span class="bg-gradient-to-r from-violet-400 to-fuchsia-400 bg-clip-text text-transparent">Team</span></h2>
        <p class="text-xl text-slate-400 max-w-3xl mx-auto">A small Canadian collective focused on performance, Local SEO and conversion.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {team.map((m) => (
          <div class="bg-slate-800/50 backdrop-blur-sm rounded-3xl p-8 border border-slate-700/50 hover:border-violet-500/30 transition-all duration-300 text-center">
            <div class="w-20 h-20 bg-gradient-to-br from-violet-500 to-fuchsia-600 rounded-full flex items-center justify-center text-white font-bold text-2xl mx-auto mb-6">{m.avatar}</div>
            <h3 class="text-xl font-bold mb-1">{m.name}</h3>
            <div class="text-violet-400 font-medium mb-4">{m.role}</div>
            <div class="space-x-2 space-y-2">
              {m.skills.map((s) => (
                <span class="inline-block px-3 py-1 bg-violet-500/10 text-violet-300 text-xs rounded-full">{s}</span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Values -->
  <section class="py-24 bg-slate-950 relative overflow-hidden">
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-1/3 left-1/4 w-96 h-96 bg-gradient-to-br from-violet-600 to-purple-600 rounded-full mix-blend-multiply blur-3xl animate-float"></div>
      <div class="absolute bottom-1/3 right-1/4 w-96 h-96 bg-gradient-to-br from-fuchsia-600 to-pink-600 rounded-full mix-blend-multiply blur-3xl animate-float" style="animation-delay: 2s;"></div>
    </div>

    <div class="container mx-auto px-6 relative z-10">
      <div class="text-center mb-16">
        <h2 class="text-4xl lg:text-5xl font-bold mb-8">Our <span class="bg-gradient-to-r from-violet-400 to-fuchsia-400 bg-clip-text text-transparent">Values</span></h2>
        <p class="text-xl text-slate-400 max-w-3xl mx-auto">Principles that guide how we build and how we partner.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {values.map((v) => (
          <div class="bg-slate-800/50 backdrop-blur-sm rounded-3xl p-8 border border-slate-700/50 hover:border-violet-500/30 transition-all duration-300">
            <div class="flex items-start gap-6">
              <div class="w-14 h-14 bg-gradient-to-br from-violet-500 to-fuchsia-600 rounded-2xl flex items-center justify-center">
                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={v.icon}></path>
                </svg>
              </div>
              <div>
                <h3 class="text-2xl font-bold mb-2 text-white">{v.title}</h3>
                <p class="text-slate-300">{v.description}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
      <p class="text-slate-500 text-xs mt-6">All billing in CAD. GST applies where relevant.</p>
    </div>
  </section>

  <!-- Process (72h → Setup → 90‑Day Engine → Ongoing) -->
  <section class="py-24 bg-slate-900 relative overflow-hidden">
    <div class="container mx-auto px-6 relative z-10">
      <div class="text-center mb-16">
        <h2 class="text-4xl lg:text-5xl font-bold mb-8">How We <span class="bg-gradient-to-r from-violet-400 to-fuchsia-400 bg-clip-text text-transparent">Work</span></h2>
        <p class="text-xl text-slate-400 max-w-3xl mx-auto">Tight scopes, weekly checkpoints, measurable outcomes.</p>
      </div>

      <div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-violet-500 to-purple-600 rounded-full flex items-center justify-center text-white font-bold text-xl mx-auto mb-6">1</div>
          <h3 class="text-xl font-bold mb-2">72‑Hour Sprint</h3>
          <p class="text-slate-400 text-sm">Quick proof: fix one high‑impact area and show before/after.</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-fuchsia-500 to-pink-600 rounded-full flex items-center justify-center text-white font-bold text-xl mx-auto mb-6">2</div>
          <h3 class="text-xl font-bold mb-2">Setup Month</h3>
          <p class="text-slate-400 text-sm">Foundations, tracking, ownership transfer. No retainer in month 1.</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-indigo-500 to-blue-600 rounded-full flex items-center justify-center text-white font-bold text-xl mx-auto mb-6">3</div>
          <h3 class="text-xl font-bold mb-2">90‑Day Growth Engine</h3>
          <p class="text-slate-400 text-sm">Ads + Local SEO cadence + A/B. Report and improve.</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-emerald-500 to-teal-600 rounded-full flex items-center justify-center text-white font-bold text-xl mx-auto mb-6">4</div>
          <h3 class="text-xl font-bold mb-2">Ongoing Support</h3>
          <p class="text-slate-400 text-sm">Normal or Premium SLA, monthly strategy, upsell roadmap.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-gradient-to-br from-slate-950 via-slate-900 to-slate-900">
    <div class="container mx-auto px-6 relative z-10 text-center">
      <div class="bg-slate-800/50 backdrop-blur-sm rounded-3xl p-12 border border-slate-700/50 hover:border-violet-500/30 transition-all duration-300 inline-block">
        <h2 class="text-3xl lg:text-4xl font-bold mb-8 text-white">Ready to grow the right way?</h2>
        <p class="text-xl text-slate-400 mb-12">Start with a free 72‑Hour Sprint or jump straight into onboarding — we’ll advise the best path.</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/sprint" class="inline-block px-8 py-4 bg-gradient-to-r from-violet-500 to-fuchsia-500 text-white font-bold rounded-full hover:scale-105 transition">Start the Sprint</a>
          <a href="/contact#intake" class="inline-block px-8 py-4 border border-slate-600 text-slate-200 font-bold rounded-full hover:border-violet-500 hover:text-white transition">Book A Call</a>
        </div>
      </div>
    </div>
  </section>
</Layout>
