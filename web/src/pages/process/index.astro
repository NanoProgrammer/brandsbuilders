---
import Layout from '../../layouts/Layout.astro';

const seo = {
  title: 'DFY Rebooking & Reactivation Engine | BrandsBuilders',
  description:
    'Done-for-you rebooking, client reactivation, SMS/email flows, and conversion systems for Alberta service businesses. Built from real customer language and behavior data.',
  canonical: 'https://brandsbuilders.ca/rebooking-system',
};

const pillars = [
  {
    title: 'Customer language research',
    desc: 'We analyze your reviews, testimonials, and public feedback to extract real customer words, pains, objections, and desired outcomes — used directly in copy and campaigns.'
  },
  {
    title: 'Pain & demand mapping',
    desc: 'We map what clients complain about, fear, and want most — so messaging and offers match buying triggers, not assumptions.'
  },
  {
    title: 'Offer & message design',
    desc: 'Headlines, hooks, and booking triggers are built from voice-of-customer data — not generic marketing templates.'
  },
  {
    title: 'Brand & owner alignment',
    desc: 'Website and campaigns are aligned with brand tone, owner positioning, and client preference signals.'
  },
  {
    title: 'Reactivation campaigns',
    desc: 'Step-by-step past-client reactivation flows via email and SMS designed to generate bookings quickly.'
  },
  {
    title: 'Rebooking & recurrence engine',
    desc: 'Follow-up and reminder systems that increase repeat bookings and client lifetime value.'
  }
];

const steps = [
  ['Step 1 — Research',
   'Review mining & language extraction',
   'We scan reviews, testimonials, and feedback to extract pain points, triggers, and buying language.'],

  ['Step 2 — Customer psychology map',
   'Pain, fear, and outcome model',
   'We map what clients want solved, what they fear, and what makes them book now.'],

  ['Step 3 — Message & copy system',
   'Website + email + SMS copy',
   'Messaging is built using real customer language and objections.'],

  ['Step 4 — Brand & design alignment',
   'Structure based on trust signals',
   'Layout and flow are built around brand tone, owner authority, and client preferences.'],

  ['Step 5 — Script & template build',
   'Email + SMS + booking scripts',
   'We create ready-to-use scripts and templates for campaigns and follow-ups.'],

  ['Step 6 — Reactivation campaign',
   'Past client booking push',
   'Multi-step reactivation sequences launch to generate bookings.'],

  ['Step 7 — Rebooking engine',
   'Recurrence & reminder flows',
   'Structured flows increase repeat visits and reduce drop-off.'],

  ['Step 8 — Show-up protection',
   'Confirmation & reminder flows',
   'SMS + email sequences reduce no-shows and empty slots.']
];

const faqs = [
  {
    q: 'Do you write the campaign copy?',
    a: 'Yes. Copy is built from real customer language extracted from reviews and testimonials — not generic marketing text.'
  },
  {
    q: 'Do you build email and SMS flows?',
    a: 'Yes. We design structured multi-step SMS and email flows for reactivation, reminders, and rebooking.'
  },
  {
    q: 'Is this only for new leads?',
    a: 'No. The system focuses first on past clients and missed opportunities — the highest ROI segment.'
  },
  {
    q: 'Do you design scripts and templates?',
    a: 'Yes. Campaign scripts, follow-up templates, and booking messages are included.'
  },
  {
    q: 'Is the website redesigned too?',
    a: 'If needed. Only when structure or trust flow blocks bookings — otherwise we optimize instead of rebuilding.'
  }
];
---

<Layout seo={seo}>

<!-- HERO -->
<section class="relative bg-slate-950 text-white pt-24 pb-16 border-b border-slate-800">

  <div class="absolute inset-0 bg-gradient-to-br from-slate-950 via-slate-950 to-fuchsia-950/30"></div>

  <div class="relative container mx-auto px-6 max-w-5xl reveal">

    <p class="text-sm uppercase tracking-widest text-slate-400 mb-6">
      DFY Rebooking & Reactivation Engine
    </p>

    <h1 class="text-5xl lg:text-6xl font-semibold leading-[1.05]">
      We turn past clients  
      <span class="text-fuchsia-300">into new bookings</span>.
    </h1>

    <p class="mt-7 text-xl text-slate-300 leading-relaxed max-w-3xl">
      Built from real customer language, real pain points,
      and real behavior — implemented as done-for-you
      email, SMS, rebooking, and reactivation systems.
    </p>

    <div class="mt-10 flex gap-4 flex-wrap">
      <a href="/apply"
        class="inline-flex px-10 py-4 rounded-xl font-semibold
               bg-gradient-to-r from-orange-500 via-pink-500 to-fuchsia-600">
        Check qualification →
      </a>

      <a href="/proof"
        class="inline-flex px-10 py-4 rounded-xl border border-slate-700 text-slate-300">
        See proof
      </a>
    </div>

  </div>
</section>


<!-- PILLARS -->
<section class="bg-slate-950 py-20 border-b border-slate-800">
<div class="container mx-auto px-6 max-w-6xl grid md:grid-cols-2 gap-8">
{pillars.map(p => (
<div class="reveal border border-slate-800 bg-slate-900/40 rounded-xl p-7">
<h3 class="text-white text-lg font-medium mb-2">{p.title}</h3>
<p class="text-slate-400">{p.desc}</p>
</div>
))}
</div>
</section>


<!-- PROCESS -->
<section class="bg-slate-950 py-20 border-b border-slate-800">
<div class="container mx-auto px-6 max-w-6xl">
<h2 class="text-3xl font-semibold text-white mb-12 reveal">
Full execution process
</h2>

<div class="grid md:grid-cols-2 gap-10">
{steps.map(([step,title,desc]) => (
<div class="reveal">
<p class="text-sm text-slate-500">{step}</p>
<h3 class="text-lg text-white font-medium mb-2">{title}</h3>
<p class="text-slate-400">{desc}</p>
</div>
))}
</div>
</div>
</section>


<!-- FAQ -->
<section class="bg-slate-950 py-20 border-b border-slate-800">
<div class="container mx-auto px-6 max-w-5xl">
<h2 class="text-3xl font-semibold text-white mb-10 reveal">FAQ</h2>

<div class="space-y-4">
{faqs.map(f => (
<details class="reveal border border-slate-800 bg-slate-900/40 rounded-xl p-6">
<summary class="text-white font-medium cursor-pointer">{f.q}</summary>
<p class="mt-4 text-slate-400">{f.a}</p>
</details>
))}
</div>
</div>
</section>


<!-- CTA -->
<section class="bg-slate-950 py-24 text-center">
<div class="container mx-auto px-6 max-w-4xl reveal">
<h2 class="text-4xl text-white font-semibold">
Install your rebooking engine
</h2>

<p class="mt-6 text-slate-300 text-lg">
We only implement where recurrence and database size justify ROI.
</p>

<a href="/apply"
class="inline-flex mt-10 px-10 py-4 rounded-xl font-semibold
bg-gradient-to-r from-orange-500 via-pink-500 to-fuchsia-600">
Check qualification →
</a>

</div>
</section>

</Layout>
