---
// src/pages/404.astro
import Layout from '../layouts/Layout.astro';

const seo = {
  title: '404 - Page Not Found | BrandsBuilders Agency',
  description: 'Oops! The page you\'re looking for doesn\'t exist. Let us help you find what you need at BrandsBuilders Agency.',
  canonical: 'https://brandsbuilders.agency/404'
};
---

<Layout seo={seo}>
  <!-- 404 Section -->
  <section class="relative py-24 lg:py-32 min-h-[90vh] bg-slate-950 flex items-center">
    <div class="container mx-auto px-6 text-center">
      <!-- Large 404 Display -->
      <div class="mb-12">
        <h1 class="text-[100px] sm:text-[150px] lg:text-[200px] font-black leading-none">
          <span class="bg-gradient-to-r from-violet-400 via-fuchsia-400 to-indigo-400 bg-clip-text text-transparent">
            404
          </span>
        </h1>
      </div>

      <!-- Title -->
      <h2 class="text-3xl sm:text-5xl font-bold mb-6 text-white">
        Oops! Page Not Found
      </h2>
      
      <!-- Description -->
      <p class="text-lg sm:text-xl text-slate-400 mb-12 max-w-2xl mx-auto">
        The page you're looking for doesn't exist or has been moved. Letâ€™s get you back on track.
      </p>

      <!-- Buttons -->
      <div class="flex flex-col sm:flex-row gap-6 justify-center items-center mb-16">
        <a href="/" class="btn btn-primary btn-lg">
          Back to Home
        </a>
        <a href="/contact" class="px-8 py-4 border border-gray-700 text-gray-300 font-semibold rounded-xl hover:border-violet-500 hover:text-white transition-all">
          Get Help
        </a>
      </div>

      <!-- Helpful Links -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <a href="/services" class="bg-slate-900 border border-slate-800 rounded-xl p-6 hover:border-violet-500/50 transition-all">
          <h3 class="font-bold text-white mb-2">Services</h3>
          <p class="text-gray-400 text-sm">View our services</p>
        </a>
        <a href="/portfolio" class="bg-slate-900 border border-slate-800 rounded-xl p-6 hover:border-fuchsia-500/50 transition-all">
          <h3 class="font-bold text-white mb-2">Portfolio</h3>
          <p class="text-gray-400 text-sm">See our work</p>
        </a>
        <a href="/about" class="bg-slate-900 border border-slate-800 rounded-xl p-6 hover:border-indigo-500/50 transition-all">
          <h3 class="font-bold text-white mb-2">About</h3>
          <p class="text-gray-400 text-sm">Learn about us</p>
        </a>
        <a href="/blog" class="bg-slate-900 border border-slate-800 rounded-xl p-6 hover:border-emerald-500/50 transition-all">
          <h3 class="font-bold text-white mb-2">Blog</h3>
          <p class="text-gray-400 text-sm">Read our insights</p>
        </a>
      </div>
    </div>
  </section>
</Layout>
