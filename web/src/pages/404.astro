---
// src/pages/404.astro
import Layout from '../layouts/Layout.astro';

const seo = {
  title: 'Page Not Found — BrandsBuilders',
  description: 'The page you’re looking for doesn’t exist. Return to the homepage or request a consultation.',
  canonical: 'https://brandsbuilders.agency/404'
};
---

<Layout seo={seo}>
  <section class="bg-slate-950 min-h-screen flex items-center">
    <div class="container mx-auto px-6 max-w-3xl text-center">

      <p class="text-sm uppercase tracking-widest text-slate-500 mb-6">
        404 — Not Found
      </p>

      <h1 class="text-4xl sm:text-5xl font-semibold text-white mb-6">
        This page doesn’t exist
      </h1>

      <p class="text-lg text-slate-400 mb-12 leading-relaxed">
        The link may be outdated, or the page was removed.
        If you’re looking for help with client acquisition or growth systems,
        you can start below.
      </p>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href="/"
          class="inline-flex items-center justify-center px-8 py-4 rounded-xl bg-white text-slate-950 font-medium hover:bg-slate-200 transition"
        >
          Go to homepage
        </a>

        <a
          href="/apply"
          class="inline-flex items-center justify-center px-8 py-4 rounded-xl border border-slate-700 text-slate-300 hover:border-slate-500 hover:text-white transition"
        >
          Apply for a consultation
        </a>
      </div>

      <p class="mt-16 text-sm text-slate-500">
        BrandsBuilders · Alberta, Canada
      </p>

    </div>
  </section>
</Layout>
