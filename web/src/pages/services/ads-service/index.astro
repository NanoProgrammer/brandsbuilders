---
import Layout from "../../../layouts/Layout.astro";

const siteUrl = "https://brandsbuilders.agency";

const seo = {
  title: "Paid Media (Google & Meta) | Alberta Growth Partner — Blueprint → Launch → ROAS",
  description:
    "We operate Paid Media inside our Growth Partner model. Start with a 72-hour Revenue Growth Blueprint, then launch with tracking, CRO, and iterative optimization to lift ROAS.",
  canonical: `${siteUrl}/services/ads`,
  keywords:
    "Google Ads Alberta, Meta Ads Calgary, PPC Edmonton, paid media Alberta, keyword research, negative keywords, CRO A/B testing, ROAS, Alberta SMB",
  ogImage: `${siteUrl}/images/og/paid-media-og.jpg`,
};

const channels = [
  "Google Ads (Search, Performance Max, Shopping, YouTube when justified)",
  "Meta Ads (Facebook & Instagram: prospecting + remarketing)",
  "Microsoft Advertising (Bing) when incremental demand exists"
];

// Process — explicit, no “buy now” packages
const process = [
  {
    title: "Audit & Tracking Sanity",
    points: [
      "Accounts, pixels, GA4, conversions and UTM hygiene review",
      "Crawl/index sanity for landings + basic speed/CWV checks",
      "Attribution sanity (model compare, lag, duplicate events)"
    ]
  },
  {
    title: "Keyword & Angle Research",
    points: [
      "Demand mapping (core, long-tail, local intent) + match-type strategy",
      "Query themes, competitor angles, and offer hooks",
      "Initial negatives plan (brand safety, irrelevant intents)"
    ]
  },
  {
    title: "Initial Campaign Build (Data Phase)",
    note: "Minimum media budget: ~ $50/day to collect statistically useful data in the first weeks.",
    points: [
      "Lean structure (Search/Shopping or PMax when justified)",
      "Tight ad groups with message-match landings",
      "Enhanced conversions + call/form tracking wired"
    ]
  },
  {
    title: "Data Review (Days 7–21)",
    points: [
      "Search term mining → add negative keywords continuously",
      "Early bid & budget adjustments (tCPA/tROAS as signal matures)",
      "Creative iterations on winning angles; trim placement waste"
    ]
  },
  {
    title: "CRO & A/B Testing",
    points: [
      "Headline/CTA/form friction tests on landings (A/B light)",
      "Speed & clarity quick wins (LCP, layout shift, trust cues)",
      "Thank-you logic & follow-up to lift close rate"
    ]
  },
  {
    title: "Scale & ROAS Lift",
    points: [
      "Expand profitable segments; cap CPA / raise ROAS targets",
      "Seasonality, value rules, budget scenarios & new surfaces",
      "Monthly insight: what changed, impact, next steps"
    ]
  }
];

const ops = [
  "Search term audits weekly; negatives added on the fly",
  "Bid/budget pacing by daypart/geo/device when justified",
  "Creative backlog maintained (UGC, hooks, offers)",
  "Feed & Merchant Center hygiene for Shopping",
  "Exclusions and frequency controls for Meta remarketing",
  "Anomaly detection and rollback plan documented"
];

// Fit actualizado a tu ICP
const fit = [
  "Owner-led SMB (2–10 employees) with capacity to handle more demand in 30–90 days",
  "High-value services (≥ $150–$400 per appointment) or e-commerce with healthy AOV (≥ $60)",
  "Based in Alberta (Calgary, Edmonton, Airdrie, Lethbridge, Red Deer)",
  "Willing to ship landing updates quickly; clear decision-maker"
];
---

<Layout seo={seo}>
  <!-- HERO -->
  <section class="relative overflow-hidden bg-gradient-to-b from-slate-950 to-slate-900">
    <div class="pointer-events-none absolute inset-0" aria-hidden="true" role="presentation">
      <div class="absolute -top-24 -left-24 h-[30rem] w-[30rem] rounded-full bg-violet-600/20 blur-3xl"></div>
      <div class="absolute -bottom-24 -right-24 h-[30rem] w-[30rem] rounded-full bg-fuchsia-600/15 blur-3xl"></div>
    </div>

    <div class="container mx-auto px-6 relative z-10 py-16 md:py-20">
      <div class="max-w-4xl">
        <p class="inline-flex items-center gap-2 rounded-full border border-violet-500/30 bg-violet-500/10 px-3 py-1.5 text-violet-200 text-xs mb-3">
          <span class="inline-block h-1.5 w-1.5 rounded-full bg-violet-400"></span>
          Operated inside our Growth Partner — not sold standalone
        </p>
        <h1 class="text-4xl md:text-5xl font-black leading-tight text-white mb-3">
          Paid Media (Google &amp; Meta)
          <span class="block bg-gradient-to-r from-violet-300 via-fuchsia-300 to-indigo-300 bg-clip-text text-transparent">
            audit → research → launch → optimize for ROAS
          </span>
        </h1>
        <p class="text-slate-300 text-base md:text-lg max-w-2xl">
          We run ads only when we control the loop: tracking, keywords, landings and CRO. Start with a
          <strong>72-hour Revenue Growth Blueprint</strong>, then launch and iterate to lift ROAS beyond target.
        </p>

        <div class="flex flex-wrap gap-3 mt-6">
          <a href="#process" class="inline-flex items-center gap-2 rounded-xl bg-gradient-to-r from-violet-600 to-fuchsia-600 px-5 py-3 font-semibold text-white">
            See the process
          </a>
          <a href="#free-sprint" class="inline-flex items-center gap-2 rounded-xl border border-slate-700 px-5 py-3 text-slate-200 hover:border-violet-500 hover:bg-violet-500/10 transition">
            Request Revenue Growth Blueprint
          </a>
        </div>

        <p class="mt-4 text-xs text-slate-500">Alberta • Open 9am–9pm daily</p>
      </div>
    </div>
  </section>

  <!-- CHANNELS -->
  <section class="py-12 bg-slate-950">
    <div class="container mx-auto px-6">
      <h2 class="text-2xl md:text-3xl font-bold text-white mb-4">Channels we operate</h2>
      <ul class="grid sm:grid-cols-2 lg:grid-cols-3 gap-3 text-slate-300 text-sm">
        {channels.map((c) => (
          <li class="rounded-xl border border-slate-800 bg-slate-900/60 p-4 flex gap-2 items-start">
            <svg class="w-4 h-4 text-violet-400 mt-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <span>{c}</span>
          </li>
        ))}
      </ul>
      <p class="text-slate-500 text-xs mt-3">Surfaces added/removed based on volume, margins and tracking quality.</p>
    </div>
  </section>

  <!-- PROCESS -->
  <section id="process" class="py-16 bg-slate-900">
    <div class="container mx-auto px-6">
      <header class="mb-8">
        <h2 class="text-3xl lg:text-4xl font-bold text-white">How we run paid media</h2>
        <p class="text-slate-400">No packages. A single operating model focused on compounding ROAS.</p>
      </header>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {process.map((step, i) => (
          <article class="rounded-2xl border border-slate-800 bg-slate-900/60 p-6">
            <div class="flex items-center justify-between mb-3">
              <h3 class="text-white font-semibold">{i + 1}. {step.title}</h3>
            </div>
            {step.note && <p class="text-xs text-violet-300 mb-3">{step.note}</p>}
            <ul class="space-y-2 text-slate-300 text-sm">
              {step.points.map((p) => (
                <li class="flex gap-2">
                  <svg class="w-4 h-4 text-violet-400 mt-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  {p}
                </li>
              ))}
            </ul>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- OPS -->
  <section class="py-16 bg-slate-950">
    <div class="container mx-auto px-6">
      <h2 class="text-2xl md:text-3xl font-bold text-white mb-6">Operational standards</h2>
      <div class="rounded-2xl border border-slate-800 bg-slate-900/60 p-6">
        <ul class="grid md:grid-cols-2 gap-3 text-slate-300 text-sm">
          {ops.map((item) => (
            <li class="flex gap-2">
              <svg class="w-4 h-4 text-violet-400 mt-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              {item}
            </li>
          ))}
        </ul>
      </div>
    </div>
  </section>

  <!-- FIT -->
  <section class="py-16 bg-slate-900">
    <div class="container mx-auto px-6">
      <header class="mb-8">
        <h2 class="text-3xl lg:text-4xl font-bold text-white">Who this is for</h2>
        <p class="text-slate-400">We partner with a small number of brands where paid media can unlock revenue quickly.</p>
      </header>
      <div class="rounded-2xl border border-slate-800 bg-slate-900/60 p-6">
        <ul class="grid md:grid-cols-2 gap-3 text-slate-300 text-sm">
          {fit.map((f) => (
            <li class="flex gap-2">
              <svg class="w-4 h-4 text-violet-400 mt-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              {f}
            </li>
          ))}
        </ul>
      </div>
    </div>
  </section>

  <!-- FREE SPRINT APPLICATION (Netlify) — mismo form que /sprint -->
  <section id="free-sprint" class="py-16 bg-gradient-to-b from-gray-950 to-gray-900">
    <div class="container mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-5xl font-bold mb-6 text-white">
          Request your <span class="bg-gradient-to-r from-violet-400 to-fuchsia-400 bg-clip-text text-transparent">Revenue Growth Blueprint</span>
        </h2>
        <p class="text-gray-400 text-lg max-w-2xl mx-auto">
          72-hour turnaround. We review your website and Google presence, then send a 2–3 minute Loom + PDF with gaps, opportunities, and a clear 3-step plan.
        </p>
      </div>

      <div class="max-w-2xl mx-auto">
        <form
          name="sprint-apply"
          method="POST"
          action="/sprint/thanks"
          data-netlify="true"
          netlify-honeypot="bot-field"
          class="bg-gray-900/50 border border-gray-800 backdrop-blur-sm rounded-3xl p-8"
          novalidate
        >
          <!-- Netlify -->
          <input type="hidden" name="form-name" value="sprint-apply" />
          <p class="hidden"><label>Don’t fill this out: <input name="bot-field" /></label></p>
          <input type="text" name="trap_url" tabindex="-1" autocomplete="off" class="hidden" aria-hidden="true" />

          <!-- 1: Business + Website -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
              <label for="business_name" class="block text-sm font-medium text-gray-300 mb-2">Business name *</label>
              <input
                id="business_name"
                name="business_name"
                required
                class="w-full px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white placeholder-gray-400 focus:border-violet-500 focus:ring-1 focus:ring-violet-500 transition-colors"
                placeholder="Your company"
              />
              <div class="text-red-400 text-sm mt-1" data-error-for="business_name" aria-live="polite"></div>
            </div>
            <div>
              <label for="site_url" class="block text-sm font-medium text-gray-300 mb-2">Website URL *</label>
              <input
                id="site_url"
                name="site_url"
                type="url"
                required
                pattern="^https?:\\/\\/.*"
                class="w-full px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white placeholder-gray-400 focus:border-violet-500 focus:ring-1 focus:ring-violet-500 transition-colors"
                placeholder="https://yourwebsite.com"
              />
              <div class="text-red-400 text-sm mt-1" data-error-for="site_url" aria-live="polite"></div>
            </div>
          </div>

          <!-- 2: City + Annual Revenue -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
              <label for="city" class="block text-sm font-medium text-gray-300 mb-2">City (Alberta) *</label>
              <select
                id="city"
                name="city"
                required
                class="w-full px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white focus:border-violet-500 focus:ring-1 focus:ring-violet-500 transition-colors"
              >
                <option value="">Select your city</option>
                <option value="Calgary">Calgary</option>
                <option value="Edmonton">Edmonton</option>
                <option value="Airdrie">Airdrie</option>
                <option value="Lethbridge">Lethbridge</option>
                <option value="Red Deer">Red Deer</option>
                <option value="Other (Alberta)">Other (Alberta)</option>
              </select>
              <div class="text-red-400 text-sm mt-1" data-error-for="city" aria-live="polite"></div>
            </div>

            <div>
              <label for="revenue" class="block text-sm font-medium text-gray-300 mb-2">Business Annual Revenue *</label>
              <select
                id="revenue"
                name="revenue"
                required
                class="w-full px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white focus:border-violet-500 focus:ring-1 focus:ring-violet-500 transition-colors"
              >
                <option value="">Select range</option>
                <option value="under-250k">Less than $250K</option>
                <option value="250k-500k">$250K – $500K</option>
                <option value="500k-1.5m">$500K – $1.5M</option>
                <option value="over-1.5m">More than $1.5M</option>
              </select>
              <div class="text-red-400 text-sm mt-1" data-error-for="revenue" aria-live="polite"></div>
            </div>
          </div>

          <!-- 3: Main goal -->
          <div class="mb-6">
            <label for="main_goal" class="block text-sm font-medium text-gray-300 mb-2">Main goal this month *</label>
            <select
              id="main_goal"
              name="main_goal"
              required
              class="w-full px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white focus:border-violet-500 focus:ring-1 focus:ring-violet-500 transition-colors"
            >
              <option value="">Choose one</option>
              <option value="bookings">More bookings</option>
              <option value="calls">More calls</option>
              <option value="sales">More online sales</option>
            </select>
            <div class="text-red-400 text-sm mt-1" data-error-for="main_goal" aria-live="polite"></div>
          </div>

          <!-- 4: Email + Phone (opcional) -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
              <label for="email" class="block text-sm font-medium text-gray-300 mb-2">Email *</label>
              <input
                id="email"
                name="email"
                type="email"
                required
                pattern="^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$"
                class="w-full px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white placeholder-gray-400 focus:border-violet-500 focus:ring-1 focus:ring-violet-500 transition-colors"
                placeholder="you@company.com"
              />
              <div class="text-red-400 text-sm mt-1" data-error-for="email" aria-live="polite"></div>
            </div>
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-300 mb-2">Phone (optional)</label>
              <input
                id="phone"
                name="phone"
                type="tel"
                inputmode="tel"
                pattern="^[+()\\d\\s.-]{7,}$"
                class="w-full px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white placeholder-gray-400 focus:border-violet-500 focus:ring-1 focus:ring-violet-500 transition-colors"
                placeholder="+1 (403) 555-0123"
              />
              <div class="text-red-400 text-sm mt-1" data-error-for="phone" aria-live="polite"></div>
            </div>
          </div>

          <!-- Consent -->
          <div class="mb-8">
            <label class="flex items-start gap-3">
              <input
                type="checkbox"
                id="consent"
                name="consent"
                required
                class="mt-1 w-4 h-4 text-violet-600 border-gray-600 rounded focus:ring-violet-500 focus:ring-2 bg-gray-800"
              />
              <span class="text-sm text-gray-400 leading-relaxed">
                I agree to receive a free 2-minute Loom using public information (website & Google Business Profile) and to be contacted about the results. PIPEDA-aware; opt-out anytime. *
              </span>
            </label>
            <div class="text-red-400 text-sm mt-1" data-error-for="consent" aria-live="polite"></div>
          </div>

          <!-- CTA -->
          <button
            type="submit"
            class="w-full bg-gradient-to-r from-violet-600 to-fuchsia-600 text-white font-bold py-4 px-8 rounded-xl hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-violet-500/25 disabled:opacity-50 disabled:cursor-not-allowed"
          >
            Get My Free Loom in 72 Hours
          </button>

          <p class="text-xs text-slate-500 mt-3">Typical turnaround: 72 hours • Hours: 9am–9pm daily • Alberta only</p>
        </form>
      </div>
    </div>
  </section>

  <!-- JSON-LD -->
