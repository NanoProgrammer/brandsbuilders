---
import Layout from "../../../layouts/Layout.astro";

const siteUrl = "https://brandsbuilders.agency";

const seo = {
  title: "Web Design & Development in Alberta | Fast, Accessible, Conversion-Focused",
  description:
    "Campaign landings, local service sites, portfolio CMS, corporate websites and e-commerce (≤20 products). Performance, accessibility and clear timelines.",
  canonical: `${siteUrl}/services/web-design`,
  keywords:
    "web design Alberta, website design Calgary, web development Edmonton, landing page CRO, corporate website CMS, Shopify developer Alberta",
  ogImage: `${siteUrl}/images/og/web-design-og.jpg`,
};

// ────────────────────────────────────────────────────────────────────────────────
// DATA — WEB DESIGN ONLY (low → low-mid pricing + timelines)
// ────────────────────────────────────────────────────────────────────────────────
const webOffers = [
  {
    name: "Campaign Landing (CRO-first)",
    price: "$1,200–$2,400",
    timeline: "~2 weeks",
    summary:
      "Single-page funnel designed to convert. Technical SEO included; perfect for ads or launches.",
    bullets: [
      "Astro/Next build (lean) + responsive layout",
      "Copy sections, FAQs, form with spam protection",
      "Technical SEO: metas, OG/Twitter, sitemap/robots",
      "Analytics & events wiring (GA4/Meta)",
      "Accessibility essentials (labels, contrast)"
    ]
  },
  {
    name: "Local Service Site (3–7 pages)",
    price: "$1,900–$3,600",
    timeline: "3–5 weeks",
    summary:
      "Multipage site with local on-page SEO to rank and convert within your city/region.",
    bullets: [
      "Pages: Home, 3–5 Services, About, Contact",
      "Local on-page SEO: internal links + LocalBusiness schema",
      "Review prompts + GBP handoff guidance",
      "Contact/quote forms + thank-you logic",
      "Performance target: mobile Lighthouse ≥90"
    ]
  },
  {
    name: "Portfolio CMS",
    price: "$2,700–$4,800",
    timeline: "3–4 weeks",
    summary:
      "Clean portfolio with CMS to publish projects, case studies and media fast.",
    bullets: [
      "Content types: Project/Case/Category + filters",
      "Markdown or headless CMS (Sanity/Contentful/Netlify)",
      "Image pipeline (lazy, srcset) + alt text workflows",
      "Search & simple taxonomy navigation",
      "Share images/social cards auto-generated"
    ]
  },
  {
    name: "Corporate Site + CMS (10–20)",
    price: "$8,200–$12,600",
    timeline: "6–10 weeks",
    summary:
      "Component-based website with roles, approvals and a CMS built for growth.",
    bullets: [
      "Design system + component library",
      "CMS roles, drafts and approvals",
      "SEO base: taxonomies, breadcrumbs, metas",
      "AA essentials + keyboard focus order",
      "Performance hardening + monitoring hooks"
    ]
  },
  {
    name: "E-commerce (≤20 products)",
    price: "$10,000–$16,000",
    timeline: "6–8 weeks",
    summary:
      "Shopify or headless storefront for small catalogs. Focus on speed, trust and checkout clarity.",
    bullets: [
      "Catalog setup (PLP/PDP), variants, badges & trust",
      "Checkout + transactional emails",
      "Product schema, metas, canonicals, sitemap",
      "Feed basics (GMC/Meta) ready for ads",
      "Analytics events for carts, checkout, purchase"
    ]
  }
];

const webAddons = [
  { name: "Web Performance Boost", price: "$1,000–$1,800" },
  { name: "Accessibility AA", price: "$700–$1,600" },
  { name: "Multilingual (hreflang)", price: "$800–$1,500 / language" },
  { name: "CMS Migration & Redirects", price: "$1,000–$2,200" },
  { name: "Booking & Integrations", price: "$450–$800" },
  { name: "Analytics & Event Tracking", price: "$350–$700" }
];

// Monthly plans (Alberta · low → low-mid) — ENGLISH, plain ASCII where possible
export const monthlyWeb = [
  {
    name: "Lite Care",
    price: "$180-$320 / mo",
    bullets: [
      "Uptime and error monitoring",
      "Weekly off-site backups",
      "Monthly core/dependency updates",
      "2 minor edits per month (text/image/link) or up to ~400 words",
      "Monthly forms check and a 1-page GA4 mini report"
    ]
  },
  {
    name: "Essential Care",
    price: "$300-$450 / mo",
    bullets: [
      "Everything in Lite",
      "1 content round per month (3-5 small changes or one simple section)",
      "Monthly CWV sanity (LCP/CLS/TBT) with quick fixes",
      "Broken links scan and basic redirects",
      "GA4 & Search Console summary with 2-3 recommendations"
    ]
  },
  {
    name: "Growth Lite",
    price: "$450-$750 / mo",
    bullets: [
      "Everything in Essential",
      "Staging and regression checks before deploys",
      "One substantive improvement per month (new section or mini-landing)",
      "Light A/B test (copy/CTA) and results note",
      "Monthly insight report (what changed, impact, next steps)"
    ]
  }
];
---

<Layout seo={seo}>
  <!-- HERO (bigger, clean, no weird classes) -->
  <section class="relative overflow-hidden bg-gradient-to-b from-slate-950 to-slate-900 min-h-[70vh] max-h-[90vh] flex items-center">
  <div class="pointer-events-none absolute inset-0">
    <div class="absolute -top-24 -left-24 h-[30rem] w-[30rem] rounded-full bg-violet-600/20 blur-3xl"></div>
    <div class="absolute -bottom-24 -right-24 h-[30rem] w-[30rem] rounded-full bg-fuchsia-600/15 blur-3xl"></div>
  </div>
  <div class="container mx-auto px-6 relative z-10 py-28 md:py-40">
    <div class="max-w-4xl">
      <p class="inline-flex items-center gap-2 rounded-full border border-violet-500/30 bg-violet-500/10 px-3 py-1.5 text-violet-200 text-xs mb-4">
        <span class="inline-block h-1.5 w-1.5 rounded-full bg-violet-400"></span>
        Web Design • Development • Performance
      </p>
      <h1 class="text-4xl md:text-5xl font-black leading-tight text-white mb-4">
        Web Design & Development
        <span class="block bg-gradient-to-r from-violet-300 via-fuchsia-300 to-indigo-300 bg-clip-text text-transparent">
          fast, accessible, built to convert
        </span>
      </h1>
      <p class="text-slate-300 text-base md:text-lg max-w-2xl">
        We design and ship lean websites and shops with pragmatic SEO, AA accessibility, and mobile Lighthouse ≥90 targets.
      </p>
      <div class="flex flex-wrap gap-3 mt-6">
        <a href="#offers" class="inline-flex items-center gap-2 rounded-xl bg-gradient-to-r from-violet-600 to-fuchsia-600 px-5 py-3 font-semibold text-white">
          See deliverables
        </a>
        <a href="/contact" class="inline-flex items-center gap-2 rounded-xl border border-slate-700 px-5 py-3 text-slate-200 hover:border-violet-500 hover:bg-violet-500/10 transition">
          Request proposal
        </a>
      </div>
    </div>
  </div>
</section>


  <!-- OFFERS (grid, no horizontal scroll) -->
  <section id="offers" class="py-16 bg-slate-950">
    <div class="container mx-auto px-6">
      <header class="mb-8">
        <h2 class="text-3xl lg:text-4xl font-bold text-white">Choose your website build</h2>
        <p class="text-slate-400">Clear scope, timeline and pricing. No carousels, no guesswork.</p>
      </header>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        {webOffers.map((o) => (
          <article class="rounded-2xl border border-slate-800 bg-gradient-to-br from-slate-900/80 to-slate-800/70 p-6">
            <div class="flex items-start justify-between gap-4 mb-2">
              <h3 class="text-white font-bold text-lg">{o.name}</h3>
              <div class="text-right">
                <div class="text-white text-sm font-semibold">{o.price}</div>
                <div class="text-slate-400 text-xs">Timeline: {o.timeline}</div>
              </div>
            </div>
            <p class="text-slate-300 text-sm mb-4">{o.summary}</p>
            <ul class="space-y-2 text-slate-300 text-sm mb-5">
              {o.bullets.map((b) => (
                <li class="flex gap-2">
                  <svg class="w-4 h-4 text-violet-400" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  {b}
                </li>
              ))}
            </ul>
            <a href="/contact" class="inline-flex items-center gap-2 rounded-xl bg-gradient-to-r from-violet-600 to-fuchsia-600 px-4 py-3 font-semibold text-white">Request this</a>
          </article>
        ))}
      </div>

      <!-- Add-ons -->
      <div class="mt-10 rounded-2xl border border-slate-800 bg-slate-900/60 p-6">
        <h3 class="text-white font-semibold mb-2">Popular add-ons</h3>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-3 text-slate-300 text-sm">
          {webAddons.map((a) => (
            <div class="rounded-lg border border-slate-800 bg-slate-950/50 px-3 py-2 flex items-center justify-between">
              <span>{a.name}</span>
              <span class="text-slate-400">{a.price}</span>
            </div>
          ))}
        </div>
        <p class="text-slate-500 text-xs mt-3">All prices in CAD; +5% GST applies in Alberta.</p>
      </div>

      <!-- Cross-links (tiny) -->
      <p class="text-slate-500 text-xs mt-6">
        Need identity or on-page SEO? See <a href="/services/branding" class="text-violet-300 underline-offset-2 hover:underline">Branding</a> and
        <a href="/services/local-seo" class="text-violet-300 underline-offset-2 hover:underline"> Local SEO</a>.
      </p>
    </div>
  </section>

  <!-- MONTHLY (web-only retainers) -->
  <section id="monthly" class="py-16 bg-slate-900">
    <div class="container mx-auto px-6">
      <header class="mb-8">
        <h2 class="text-3xl lg:text-4xl font-bold text-white">Monthly care (web only)</h2>
        <p class="text-slate-400">Keep your site healthy and your store sane. Cancel anytime with 30-day notice.</p>
      </header>

      <div class="grid md:grid-cols-2 gap-6">
        {monthlyWeb.map((m) => (
          <article class="rounded-2xl border border-slate-800 bg-gradient-to-br from-slate-900/80 to-slate-800/70 p-6">
            <div class="flex items-start justify-between mb-1">
              <h3 class="text-white font-semibold">{m.name}</h3>
              <span class="text-white text-sm font-semibold">{m.price}</span>
            </div>
            <ul class="text-slate-300 text-sm space-y-2">
              {m.bullets.map((b) => (
                <li class="flex gap-2">
                  <svg class="w-4 h-4 text-violet-400" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  {b}
                </li>
              ))}
            </ul>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- GUARANTEES (compact, web-relevant) -->
  <section class="py-16 bg-slate-950">
    <div class="container mx-auto px-6">
      <h2 class="text-2xl md:text-3xl font-bold text-white mb-6">What we guarantee</h2>
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="rounded-2xl border border-slate-800 bg-slate-900/60 p-5">
          <h3 class="text-white font-semibold mb-1">Performance</h3>
          <p class="text-slate-300 text-sm">{`Mobile Lighthouse ≥90 and LCP < 2.5s on new pages (trade-offs documented).`}</p>
        </div>
        <div class="rounded-2xl border border-slate-800 bg-slate-900/60 p-5">
          <h3 class="text-white font-semibold mb-1">Accessibility</h3>
          <p class="text-slate-300 text-sm">WCAG 2.1 A/AA essentials on shipped templates.</p>
        </div>
        <div class="rounded-2xl border border-slate-800 bg-slate-900/60 p-5">
          <h3 class="text-white font-semibold mb-1">Warranty</h3>
          <p class="text-slate-300 text-sm">30-day bug fixes; 60-day coverage for checkout blockers.</p>
        </div>
        <div class="rounded-2xl border border-slate-800 bg-slate-900/60 p-5">
          <h3 class="text-white font-semibold mb-1">Ownership</h3>
          <p class="text-slate-300 text-sm">You own domain, code and content from day one.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ (web-specific) -->
  <section id="faq" class="py-16 bg-slate-900">
    <div class="container mx-auto px-6">
      <h2 class="text-2xl md:text-3xl font-bold text-white mb-6">Web Design FAQ</h2>
      <div class="grid md:grid-cols-2 gap-6">
        <div class="rounded-2xl border border-slate-800 bg-slate-950/60 p-6">
          <h3 class="text-white font-semibold mb-2">What stack do you use?</h3>
          <p class="text-slate-300 text-sm">Astro or Next for sites, Shopify or headless for stores. We choose based on speed, editing needs and integrations.</p>
        </div>
        <div class="rounded-2xl border border-slate-800 bg-slate-950/60 p-6">
          <h3 class="text-white font-semibold mb-2">Do you provide copy/images?</h3>
          <p class="text-slate-300 text-sm">Client provides content; we can scope copywriting/imagery as an add-on if needed.</p>
        </div>
        <div class="rounded-2xl border border-slate-800 bg-slate-950/60 p-6">
          <h3 class="text-white font-semibold mb-2">Who hosts the site?</h3>
          <p class="text-slate-300 text-sm">Client-owned accounts (Vercel/Netlify/Cloudflare/Shopify). We connect domains and configure SSL.</p>
        </div>
        <div class="rounded-2xl border border-slate-800 bg-slate-950/60 p-6">
          <h3 class="text-white font-semibold mb-2">How are timelines set?</h3>
          <p class="text-slate-300 text-sm">We hold weekly check-ins and ship against milestones. Delays are usually content/feedback related — we document trade-offs.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- JSON-LD (web design focused) -->
  <script type="application/ld+json">
    {JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "WebPage",
          url: `${siteUrl}/services/web-design`,
          name: "Web Design & Development | BrandsBuilders Agency",
          description: seo.description,
          inLanguage: "en-CA",
          breadcrumb: {
            "@type": "BreadcrumbList",
            itemListElement: [
              { "@type": "ListItem", position: 1, name: "Home", item: siteUrl },
              { "@type": "ListItem", position: 2, name: "Services", item: `${siteUrl}/services` },
              { "@type": "ListItem", position: 3, name: "Web Design", item: `${siteUrl}/services/web-design` }
            ]
          }
        },
        {
          "@type": "Service",
          name: "Web Design & Development",
          areaServed: [
            { "@type": "AdministrativeArea", name: "Alberta" },
            { "@type": "City", name: "Calgary" },
            { "@type": "City", name: "Edmonton" }
          ],
          provider: { "@type": "Organization", name: "BrandsBuilders Agency", url: siteUrl },
          hasOfferCatalog: {
            "@type": "OfferCatalog",
            name: "Website Deliverables",
            itemListElement: webOffers.map((o) => ({
              "@type": "Offer",
              name: o.name,
              description: o.summary,
              priceSpecification: { "@type": "PriceSpecification", priceCurrency: "CAD", price: o.price },
              availability: "https://schema.org/InStock"
            }))
          }
        },
        {
          "@type": "OfferCatalog",
          name: "Web Care Plans",
          itemListElement: monthlyWeb.map((m) => ({
            "@type": "Offer",
            name: m.name,
            priceSpecification: { "@type": "PriceSpecification", priceCurrency: "CAD", price: m.price }
          }))
        },
        {
          "@type": "FAQPage",
          mainEntity: [
            { "@type": "Question", name: "What stack do you use?", acceptedAnswer: { "@type": "Answer", text: "Astro or Next for sites, Shopify or headless for stores. We choose based on speed, editing needs and integrations." } },
            { "@type": "Question", name: "Do you provide copy/images?", acceptedAnswer: { "@type": "Answer", text: "Client provides content; we can scope copywriting/imagery as an add-on if needed." } },
            { "@type": "Question", name: "Who hosts the site?", acceptedAnswer: { "@type": "Answer", text: "Client-owned accounts (Vercel/Netlify/Cloudflare/Shopify). We connect domains and configure SSL." } },
            { "@type": "Question", name: "How are timelines set?", acceptedAnswer: { "@type": "Answer", text: "We hold weekly check-ins and ship against milestones. Delays are usually content/feedback related — we document trade-offs." } }
          ]
        }
      ]
    })}
  </script>
</Layout>
