---
import Layout from "../../../layouts/Layout.astro";

const siteUrl = "https://brandsbuilders.agency";

const seo = {
  title: "Branding Services in Alberta | Brand Strategy, Identity & Messaging",
  description:
    "Brand Launch, Brand Refresh, Identity System, and Messaging Kit for Alberta SMBs. Clear timelines, transparent pricing, and full asset ownership.",
  canonical: `${siteUrl}/services/branding`,
  keywords:
    "branding Alberta, brand identity Calgary, brand strategy Edmonton, logo design Alberta, messaging kit, visual identity system",
  ogImage: `${siteUrl}/images/og/branding-og.jpg`,
};

// ────────────────────────────────────────────────────────────────────────────────
// DATA — BRANDING ONLY (no packages, no web/seo retainers)
// ────────────────────────────────────────────────────────────────────────────────
const brandingServices = [
  {
    name: "Brand Launch (from scratch)",
    price: "$2,600–$4,200",
    timeline: "2–3 weeks",
    summary:
      "A fast, clean launch for a new business or offer. Lightweight but complete kit to open your channels confidently.",
    bullets: [
      "Primary + alt logo (light/dark + mono)",
      "Color palette (primary/secondary + accessibility checks)",
      "Type pairing (headlines/body) + web-safe backups",
      "Voice & tone one-pager (values, dos/don'ts, sample lines)",
      "8–12 social templates (Canva/Figma)",
      "Brand kit export (SVG/PNG/PDF) + quick usage sheet",
    ],
  },
  {
    name: "Brand Refresh",
    price: "$1,600–$2,800",
    timeline: "1–2 weeks",
    summary:
      "Tighten what you already have. Keep equity, remove friction, and improve consistency across touchpoints.",
    bullets: [
      "Logo refinements (spacing, weights, file cleanup)",
      "Palette tune + contrast audit",
      "Updated type pairing + scale",
      "6–8 social templates + covers",
      "Mini guidelines (8–10 pages)",
      "Asset clean-up + export set (SVG/PNG/PDF)",
    ],
  },
  {
    name: "Identity System",
    price: "$3,400–$5,600",
    timeline: "3–5 weeks",
    summary:
      "A robust system for teams that need consistency at scale (web, print, social, partner decks).",
    bullets: [
      "Logo family (primary/secondary/mark) + clear-space grid",
      "Color system + tokens (light/dark/interactive)",
      "Type system (display/body/code) + rhythm",
      "Icon style + basic shapes library",
      "Compositions for key use-cases (web, social, deck)",
      "Guidelines PDF (10–20 pages) + Figma library",
    ],
  },
  {
    name: "Messaging Kit",
    price: "$600–$1,200",
    timeline: "~1 week",
    summary:
      "Clarity for your homepage, about, and ads. Tight positioning and copy you can actually paste.",
    bullets: [
      "Audience + problem/solution + POV",
      "Positioning statement + UVP",
      "3–5 taglines + elevator pitch",
      "Company boilerplate (80–120 words)",
      "5 headline starters + 5 CTA lines",
      "Tone-of-voice words + sample rewrites",
    ],
  },
];

const brandingAddons = [
  "Naming Sprint ($450–$900)",
  "Brand Guidelines — Lite/Full ($500–$1,800)",
  "Social Template Pack ($250–$600)",
];

// Monthly plans relevant to BRANDING only → Social Content tiers
const socialPlans = [
  {
    tier: "Lite",
    price: "$450–$700 / mo",
    pitch: "Maintain presence without heavy lift.",
    bullets: [
      "2 Reels/mo (client footage, 15–30s, auto captions)",
      "4 posts (or 2 carousels) + 6 Stories",
      "Basic copy + hashtags; scheduling on 1–2 networks",
      "1 simple monthly report",
      "1 round of changes per asset",
    ],
  },
  {
    tier: "Core",
    price: "$900–$1,400 / mo",
    pitch: "Consistent local growth and testing.",
    bullets: [
      "4–6 Reels/mo (hooks, burned-in captions, cover)",
      "8–10 posts + 12–16 Stories",
      "Editorial calendar; scheduling across 2–3 networks",
      "Light community mgmt (15 min/day, Mon–Fri)",
      "1 creative A/B test per month",
      "1-page KPI report",
      "2 rounds of changes per asset",
    ],
  },
  {
    tier: "Growth",
    price: "$1,800–$2,400 / mo",
    pitch: "Accelerate results; trial paid distribution.",
    bullets: [
      "8–10 Reels/mo (UGC + brand; vertical cuts)",
      "12–16 posts + 20–24 Stories",
      "Template library (Canva/Figma) included",
      "Community mgmt 30 min/day (Mon–Fri)",
      "Basic social ads mgmt (up to $1,500 CAD ad spend)",
      "Monthly insights + next-month recommendations",
      "2 rounds of changes per asset",
    ],
  },
  {
    tier: "Performer",
    price: "$3,000–$4,500/mo",
    pitch: "Scale creative + message/offer experiments.",
    bullets: [
      "12–14 Reels/mo + 16–20 posts + 30 Stories",
      "Motion basics, hooks and tailored CTAs",
      "Ads mgmt (up to $3,000 CAD ad spend)",
      "Competitive benchmark + message study + offer tests",
      "Bi-weekly strategy sync + live dashboard",
    ],
  },
];
---

<Layout seo={seo}>
  <!-- HERO (slightly larger, no horizontal scroll anywhere) -->
  <section class="relative overflow-hidden bg-gradient-to-b from-slate-950 to-slate-900">
    <div class="pointer-events-none absolute inset-0">
      <div class="absolute -top-24 -left-24 h-[28rem] w-[28rem] rounded-full bg-violet-600/20 blur-3xl"></div>
      <div class="absolute -bottom-24 -right-24 h-[28rem] w-[28rem] rounded-full bg-fuchsia-600/15 blur-3xl"></div>
    </div>
    <div class="container mx-auto px-6 relative z-8 py-12 md:py-18">
      <div class="max-w-4xl max-h-[90vh]">
        <p class="inline-flex items-center gap-2 rounded-full border border-violet-500/30 bg-violet-500/10 px-3 py-1.5 text-violet-200 text-xs mb-4">
          <span class="inline-block h-1.5 w-1.5 rounded-full bg-violet-400"></span>
          Branding • Identity • Messaging
        </p>
        <h1 class="text-5xl md:text-7xl font-black leading-tight text-white mb-4">
          Branding Services
          <span class="block bg-gradient-to-r from-violet-300 via-fuchsia-300 to-indigo-300 bg-clip-text text-transparent">built for clarity & trust</span>
        </h1>
        <p class="text-slate-300 text-base md:text-lg max-w-2xl">
          Launch or refresh your brand with a system that looks sharp, reads clearly, and scales across web, social and decks — with full ownership.
        </p>
        <div class="flex flex-wrap gap-3 mt-6">
          <a href="#offers" class="inline-flex items-center gap-2 rounded-xl bg-gradient-to-r from-violet-600 to-fuchsia-600 px-5 py-3 font-semibold text-white">See deliverables</a>
          <a href="/contact" class="inline-flex items-center gap-2 rounded-xl border border-slate-700 px-5 py-3 text-slate-200 hover:border-violet-500 hover:bg-violet-500/10 transition">Request proposal</a>
        </div>
      </div>
    </div>
  </section>

  <!-- OFFERS (grid, no carousels) -->
  <section id="offers" class="py-16 bg-slate-950">
    <div class="container mx-auto px-6">
      <header class="mb-8">
        <h2 class="text-3xl lg:text-4xl font-bold text-white">Pick your branding deliverable</h2>
        <p class="text-slate-400">Clear scope, timeline, and price range. No fluff.</p>
      </header>

      <div class="grid md:grid-cols-2 gap-6 lg:gap-8">
        {brandingServices.map((svc) => (
          <article class="rounded-2xl border border-slate-800 bg-gradient-to-br from-slate-900/80 to-slate-800/70 p-6">
            <div class="flex items-start justify-between gap-4 mb-2">
              <h3 class="text-white font-bold text-lg">{svc.name}</h3>
              <div class="text-right">
                <div class="text-white text-sm font-semibold">{svc.price}</div>
                <div class="text-slate-400 text-xs">Timeline: {svc.timeline}</div>
              </div>
            </div>
            <p class="text-slate-300 text-sm mb-4">{svc.summary}</p>
            <ul class="space-y-2 text-slate-300 text-sm mb-5">
              {svc.bullets.map((b) => (
                <li class="flex gap-2"><svg class="w-4 h-4 text-violet-400" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>{b}</li>
              ))}
            </ul>
            <a href="/contact" class="inline-flex items-center gap-2 rounded-xl bg-gradient-to-r from-violet-600 to-fuchsia-600 px-4 py-3 font-semibold text-white">Request this</a>
          </article>
        ))}
      </div>

      <!-- Add‑ons -->
      <div class="mt-10 rounded-2xl border border-slate-800 bg-slate-900/60 p-6">
        <h3 class="text-white font-semibold mb-2">Popular add‑ons</h3>
        <ul class="grid sm:grid-cols-2 lg:grid-cols-3 gap-3 text-slate-300 text-sm">
          {brandingAddons.map((a) => (<li class="rounded-lg border border-slate-800 bg-slate-950/50 px-3 py-2">{a}</li>))}
        </ul>
      </div>

      <!-- Cross-links (text only, tiny) -->
      <p class="text-slate-500 text-xs mt-6">Looking for build + SEO? Explore <a href="/services/web-design" class="text-violet-300 underline-offset-2 hover:underline">Web Design</a> and <a href="/services/local-seo" class="text-violet-300 underline-offset-2 hover:underline">Local SEO</a>.</p>
    </div>
  </section>

  <!-- MONTHLY (Branding-related only) -->
  <section id="monthly" class="py-16 bg-slate-900">
    <div class="container mx-auto px-6">
      <header class="mb-8">
        <h2 class="text-3xl lg:text-4xl font-bold text-white">Monthly creative support</h2>
        <p class="text-slate-400">Social content retainers to keep the brand active. Cancel anytime with 30‑day notice.</p>
      </header>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {socialPlans.map((t) => (
          <article class="rounded-2xl border border-slate-800 bg-gradient-to-br from-slate-900/80 to-slate-800/70 p-6">
            <div class="flex items-start justify-between gap-4 mb-1">
              <h3 class="text-white font-semibold">{t.tier}</h3>
              <span class="text-white text-sm font-semibold">{t.price}</span>
            </div>
            <p class="text-slate-400 text-xs mb-3">{t.pitch}</p>
            <ul class="text-slate-300 text-xs space-y-2">
              {t.bullets.map((b) => (<li class="flex gap-2"><svg class="w-4 h-4 text-violet-400" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>{b}</li>))}
            </ul>
          </article>
        ))}
      </div>

      <p class="text-slate-500 text-xs mt-6">Ad spend not included where applicable.</p>
    </div>
  </section>

  <!-- FAQ (branding-specific, compact) -->
  <section id="faq" class="py-16 bg-slate-950">
    <div class="container mx-auto px-6">
      <h2 class="text-2xl md:text-3xl font-bold text-white mb-6">Branding FAQ</h2>
      <div class="grid md:grid-cols-2 gap-6">
        <div class="rounded-2xl border border-slate-800 bg-slate-900/60 p-6">
          <h3 class="text-white font-semibold mb-2">How many revision rounds are included?</h3>
          <p class="text-slate-300 text-sm">Typically 1–2 rounds grouped per deliverable. Extra rounds are priced hourly and quoted before work.</p>
        </div>
        <div class="rounded-2xl border border-slate-800 bg-slate-900/60 p-6">
          <h3 class="text-white font-semibold mb-2">Do I own the files?</h3>
          <p class="text-slate-300 text-sm">Yes. You own all exported assets and final source files on completion. No vendor lock‑in.</p>
        </div>
        <div class="rounded-2xl border border-slate-800 bg-slate-900/60 p-6">
          <h3 class="text-white font-semibold mb-2">What tools do you deliver in?</h3>
          <p class="text-slate-300 text-sm">Figma for design source and Canva for template packs. We also export SVG/PNG/PDF and a compact brand guide.</p>
        </div>
        <div class="rounded-2xl border border-slate-800 bg-slate-900/60 p-6">
          <h3 class="text-white font-semibold mb-2">Can you handle naming?</h3>
          <p class="text-slate-300 text-sm">Yes — add the Naming Sprint add‑on for shortlists, checks, and rationale.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- JSON‑LD (branding focused) -->
  <script type="application/ld+json">
    {JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "WebPage",
          url: `${siteUrl}/services/branding`,
          name: "Branding Services | BrandsBuilders Agency",
          description: seo.description,
          inLanguage: "en-CA",
          breadcrumb: {
            "@type": "BreadcrumbList",
            itemListElement: [
              { "@type": "ListItem", position: 1, name: "Home", item: siteUrl },
              { "@type": "ListItem", position: 2, name: "Services", item: `${siteUrl}/services` },
              { "@type": "ListItem", position: 3, name: "Branding", item: `${siteUrl}/services/branding` }
            ]
          }
        },
        {
          "@type": "Service",
          name: "Branding",
          areaServed: [
            { "@type": "AdministrativeArea", name: "Alberta" },
            { "@type": "City", name: "Calgary" },
            { "@type": "City", name: "Edmonton" }
          ],
          provider: { "@type": "Organization", name: "BrandsBuilders Agency", url: siteUrl },
          hasOfferCatalog: {
            "@type": "OfferCatalog",
            name: "Branding Deliverables",
            itemListElement: brandingServices.map((s) => ({
              "@type": "Offer",
              name: s.name,
              description: s.summary,
              priceSpecification: { "@type": "PriceSpecification", priceCurrency: "CAD", price: s.price },
              availability: "https://schema.org/InStock"
            }))
          }
        },
        {
          "@type": "OfferCatalog",
          name: "Branding Retainers",
          itemListElement: socialPlans.map((t) => ({
            "@type": "Offer",
            name: `Social Content — ${t.tier}`,
            description: t.pitch,
            priceSpecification: { "@type": "PriceSpecification", priceCurrency: "CAD", price: t.price }
          }))
        },
        {
          "@type": "FAQPage",
          mainEntity: [
            {
              "@type": "Question",
              name: "How many revision rounds are included?",
              acceptedAnswer: { "@type": "Answer", text: "Typically 1–2 rounds grouped per deliverable. Extra rounds are priced hourly and quoted before work." }
            },
            {
              "@type": "Question",
              name: "Do I own the files?",
              acceptedAnswer: { "@type": "Answer", text: "Yes. You own all exported assets and final source files on completion. No vendor lock‑in." }
            },
            {
              "@type": "Question",
              name: "What tools do you deliver in?",
              acceptedAnswer: { "@type": "Answer", text: "Figma for design source and Canva for templates. We also export SVG/PNG/PDF and a compact brand guide." }
            },
            {
              "@type": "Question",
              name: "Can you handle naming?",
              acceptedAnswer: { "@type": "Answer", text: "Yes — add the Naming Sprint add‑on for shortlists, checks, and rationale." }
            }
          ]
        }
      ]
    })}
  </script>
</Layout>
