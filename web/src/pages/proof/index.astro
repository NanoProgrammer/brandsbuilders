---
import Layout from '../../layouts/Layout.astro';

const seo = {
  title: 'Proof — Upfront Website Builds & Real Outcomes | BrandsBuilders',
  description:
    'Real websites, real systems, real outcomes. Proof of execution from upfront website builds focused on performance, tracking, and ownership.',
  canonical: 'https://brandsbuilders.ca/proof'
};

const cases = [
  {
    name: 'Artilate Chocolate',
    stack: 'E-commerce · Website · GA4 · Google Search',
    hero: 'artilate-hero',
    gallery: ['artilate-1', 'artilate-2'],
    problem: 'Traffic existed, but purchase attribution and funnel clarity were missing.',
    change: 'Built a high-performance e-commerce website with clean GA4 purchase tracking and technical SEO.',
    result: 'Clear visibility from visit → product → checkout → purchase, with trusted conversion paths.'
  },
  {
    name: 'GrillsGuard',
    stack: 'Local Services · Website · GA4 · Google Ads · GBP',
    hero: 'grillsguard-hero',
    gallery: ['grillsguard-1', 'grillsguard-2'],
    problem: 'Inbound calls were not tied to campaigns and ad spend quality was unclear.',
    change: 'Rebuilt service pages, implemented call tracking, and connected Ads conversions.',
    result: 'Higher-quality inbound calls with controlled cost per lead.'
  },
  {
    name: 'Gaplets',
    stack: 'SaaS · Product UI · GA4 · Paid Acquisition',
    hero: 'gaplets-hero',
    gallery: ['gaplets-1', 'gaplets-2'],
    problem: 'Activation drop-offs were invisible and acquisition ROI could not be validated.',
    change: 'Designed onboarding flows and implemented event-level activation tracking.',
    result: 'Full activation funnel visibility and confident acquisition decisions.'
  }
];

const signals = [
  'Mobile Lighthouse scores consistently above 90 on real devices',
  'GA4 events and attribution wired to actual business outcomes',
  'Calls and bookings tied to campaigns — not assumptions',
  'Client ownership of domains, code, analytics, and ad accounts',
  'Conversion routing optimized where speed-to-lead matters',
  'No lock-ins, no black-box dashboards, no dependencies'
];

const voices = [
  'We finally understood what was driving bookings — not just traffic.',
  'Everything was execution-focused. No fluff.',
  'Seeing the system built made the decision easy.'
];
---

<Layout seo={seo}>

<!-- HERO -->
<section class="relative bg-slate-950 text-white pt-16 pb-24 overflow-hidden border-b border-slate-800">
  <div class="absolute inset-0 bg-gradient-to-br from-slate-950 via-slate-950 to-fuchsia-950/35"></div>

  <div class="relative container mx-auto px-6 max-w-6xl reveal">
    <p class="text-sm uppercase tracking-widest text-slate-400 mb-6">
      Proof
    </p>

    <h1 class="text-5xl lg:text-6xl font-semibold leading-[1.05] max-w-5xl">
      Real work.
      <span class="text-fuchsia-300">Built systems.</span>
      Real outcomes.
    </h1>

    <p class="mt-7 text-xl text-slate-300 leading-relaxed max-w-3xl">
      This is not theory or mockups.
      These are websites and systems we actually built —
      focused on performance, tracking, and ownership.
    </p>

    <div class="mt-10 flex gap-4 flex-wrap">
      <a
        href="/apply"
        class="inline-flex items-center justify-center px-10 py-4 rounded-xl font-semibold
               bg-gradient-to-r from-orange-500 via-pink-500 to-fuchsia-600
               text-white hover:opacity-90 transition"
      >
        Apply for upfront build →
      </a>
    </div>
  </div>
</section>

<!-- CASES -->
<section class="bg-slate-950 py-28">
  <div class="container mx-auto px-6 max-w-6xl space-y-24">
    {cases.map((c, idx) => (
      <article class="reveal grid lg:grid-cols-12 gap-12 items-start">

        <!-- META -->
        <div class="lg:col-span-4 lg:sticky lg:top-24">
          <p class="text-sm uppercase tracking-widest text-slate-400">{c.name}</p>
          <p class="text-slate-500 text-sm mt-2">{c.stack}</p>

          <div class="mt-8 space-y-4">
            <p class="text-slate-300">
              <span class="text-slate-500">Problem — </span>{c.problem}
            </p>
            <p class="text-slate-300">
              <span class="text-slate-500">Build — </span>{c.change}
            </p>
            <p class="text-white font-medium">
              <span class="text-slate-500">Outcome — </span>{c.result}
            </p>
          </div>
        </div>

        <!-- VISUALS -->
        <div class="lg:col-span-8 space-y-6">
          <div class="rounded-2xl overflow-hidden border border-slate-800 bg-slate-900 shadow-2xl">
            <img
              src={`/proof/${c.hero}-768.webp`}
              alt={`${c.name} website`}
              loading={idx === 0 ? 'eager' : 'lazy'}
              class="w-full object-cover"
            />
          </div>

          <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            {c.gallery.map((img) => (
              <div class="rounded-xl overflow-hidden border border-slate-800 bg-slate-900/60">
                <img src={`/proof/${img}.webp`} alt="" loading="lazy" />
              </div>
            ))}
          </div>
        </div>

      </article>
    ))}
  </div>
</section>

<!-- SIGNALS -->
<section class="bg-slate-950 py-24 border-t border-slate-800">
  <div class="container mx-auto px-6 max-w-6xl reveal grid md:grid-cols-2 gap-6">
    {signals.map((s) => (
      <div class="rounded-xl border border-slate-800 bg-slate-900/40 p-6">
        <p class="text-slate-300 text-lg">
          <span class="text-fuchsia-300">✓</span> {s}
        </p>
      </div>
    ))}
  </div>
</section>

<!-- VOICES -->
<section class="bg-slate-950 py-24 border-t border-slate-800">
  <div class="container mx-auto px-6 max-w-6xl space-y-10">
    {voices.map((v) => (
      <blockquote class="reveal rounded-2xl border border-slate-800 bg-slate-900/35 p-10">
        <p class="text-2xl lg:text-3xl italic text-slate-200">
          “{v}”
        </p>
      </blockquote>
    ))}
  </div>
</section>

<!-- CTA -->
<section class="bg-slate-950 py-28 border-t border-slate-800 text-center">
  <div class="container mx-auto px-6 max-w-4xl reveal">
    <h2 class="text-3xl font-semibold text-white">
      Want to see it built?
    </h2>

    <p class="mt-5 text-slate-300 text-lg max-w-2xl mx-auto">
      Apply to have your website built upfront.
      Review the work first. Decide after.
    </p>

    <a
      href="/apply"
      class="inline-flex items-center justify-center mt-10 px-10 py-4 rounded-xl font-semibold
             bg-gradient-to-r from-orange-500 via-pink-500 to-fuchsia-600
             text-white hover:opacity-90 transition"
    >
      Apply for upfront build →
    </a>

    <p class="mt-6 text-sm text-slate-400">
      No pitch. No pressure.
    </p>
  </div>
</section>

</Layout>
