---
import Layout from '../../layouts/Layout.astro';

const seo = {
  title: 'Proof — Reactivation & Rebooking Systems That Generate Bookings | BrandsBuilders',
  description:
    'Real businesses, real systems, real booking outcomes. Proof of client reactivation and rebooking engines generating measurable results.',
  canonical: 'https://brandsbuilders.ca/proof'
};

const cases = [
  {
    name: 'Artilate Chocolate',
    stack: 'Direct-to-consumer · Repeat buyers · Email base',
    hero: 'artilate-hero',
    gallery: ['artilate-1', 'artilate-2'],
    problem: 'Past buyers existed but there was no structured reactivation or repeat purchase flow.',
    change: 'Installed structured follow-up and reactivation sequences tied to past buyers.',
    result: 'Repeat purchase behavior increased with measurable re-order activity.'
  },
  {
    name: 'GrillsGuard',
    stack: 'Local services · One-time jobs · Repeat cycles',
    hero: 'grillsguard-hero',
    gallery: ['grillsguard-1'],
    problem: 'Completed jobs were not converted into repeat seasonal bookings.',
    change: 'Implemented repeat-service triggers and client rebooking reminders.',
    result: 'More returning customers and higher repeat job scheduling.'
  },
  {
    name: 'Gaplets',
    stack: 'Appointments · Slots · Cancellation recovery',
    hero: 'gaplets-hero',
    gallery: ['gaplets-1', 'gaplets-2'],
    problem: 'Canceled bookings created empty revenue slots.',
    change: 'Built automated replacement and reactivation flows.',
    result: 'Open slots converted into replacement bookings.'
  }
];

const signals = [
  'Past-client databases converted into booked appointments',
  'Repeat visit and repeat job rates increased',
  'Show-up rates improved with confirmation flows',
  'Cancellation slots recovered with replacement campaigns',
  'Booking gains measured within first 60 days',
  'Done-for-you implementation — not DIY software'
];

const voices = [
  'We got bookings from clients we thought were gone.',
  'The system paid for itself faster than expected.',
  'We didn’t need more ads — we needed activation.'
];
---

<Layout seo={seo}>

<!-- HERO -->
<section class="relative bg-slate-950 text-white pt-16 pb-24 overflow-hidden border-b border-slate-800">
  <div class="absolute inset-0 bg-gradient-to-br from-slate-950 via-slate-950 to-fuchsia-950/35"></div>

  <div class="relative container mx-auto px-6 max-w-6xl reveal">
    <p class="text-sm uppercase tracking-widest text-slate-400 mb-6">
      Proof
    </p>

    <h1 class="text-5xl lg:text-6xl font-semibold leading-[1.05] max-w-5xl">
      Real businesses.  
      <span class="text-fuchsia-300">Reactivated clients.</span>  
      Real bookings.
    </h1>

    <p class="mt-7 text-xl text-slate-300 leading-relaxed max-w-3xl">
      These are real companies where rebooking and reactivation systems
      were installed to generate repeat appointments,
      recovered slots, and measurable booking gains.
    </p>

    <div class="mt-10 flex gap-4 flex-wrap">
      <a
        href="/apply"
        class="inline-flex items-center justify-center px-10 py-4 rounded-xl font-semibold
               bg-gradient-to-r from-orange-500 via-pink-500 to-fuchsia-600
               text-white hover:opacity-90 transition"
      >
        Check qualification →
      </a>
    </div>
  </div>
</section>

<!-- CASES -->
<section class="bg-slate-950 py-28">
  <div class="container mx-auto px-6 max-w-6xl space-y-24">
    {cases.map((c, idx) => (
      <article class="reveal grid lg:grid-cols-12 gap-12 items-start">

        <!-- META -->
        <div class="lg:col-span-4 lg:sticky lg:top-24">
          <p class="text-sm uppercase tracking-widest text-slate-400">{c.name}</p>
          <p class="text-slate-500 text-sm mt-2">{c.stack}</p>

          <div class="mt-8 space-y-4">
            <p class="text-slate-300">
              <span class="text-slate-500">Before — </span>{c.problem}
            </p>
            <p class="text-slate-300">
              <span class="text-slate-500">System — </span>{c.change}
            </p>
            <p class="text-white font-medium">
              <span class="text-slate-500">Result — </span>{c.result}
            </p>
          </div>
        </div>

        <!-- VISUALS (REAL IMAGES — KEEP) -->
        <div class="lg:col-span-8 space-y-6">
          <div class="rounded-2xl overflow-hidden border border-slate-800 bg-slate-900 shadow-2xl">
            <img
              src={`/proof/${c.hero}-768.webp`}
              alt={`${c.name} system`}
              loading={idx === 0 ? 'eager' : 'lazy'}
              class="w-full object-cover"
            />
          </div>

          <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            {c.gallery.map((img) => (
              <div class="rounded-xl overflow-hidden border border-slate-800 bg-slate-900/60">
                <img src={`/proof/${img}.webp`} alt="" loading="lazy" />
              </div>
            ))}
          </div>
        </div>

      </article>
    ))}
  </div>
</section>

<!-- SIGNALS -->
<section class="bg-slate-950 py-24 border-t border-slate-800">
  <div class="container mx-auto px-6 max-w-6xl reveal grid md:grid-cols-2 gap-6">
    {signals.map((s) => (
      <div class="rounded-xl border border-slate-800 bg-slate-900/40 p-6">
        <p class="text-slate-300 text-lg">
          <span class="text-fuchsia-300">✓</span> {s}
        </p>
      </div>
    ))}
  </div>
</section>

<!-- VOICES -->
<section class="bg-slate-950 py-24 border-t border-slate-800">
  <div class="container mx-auto px-6 max-w-6xl space-y-10">
    {voices.map((v) => (
      <blockquote class="reveal rounded-2xl border border-slate-800 bg-slate-900/35 p-10">
        <p class="text-2xl lg:text-3xl italic text-slate-200">
          “{v}”
        </p>
      </blockquote>
    ))}
  </div>
</section>

<!-- CTA -->
<section class="bg-slate-950 py-28 border-t border-slate-800 text-center">
  <div class="container mx-auto px-6 max-w-4xl reveal">
    <h2 class="text-3xl font-semibold text-white">
      Want results like these?
    </h2>

    <p class="mt-5 text-slate-300 text-lg max-w-2xl mx-auto">
      Check if your business qualifies
      for the rebooking & reactivation system.
    </p>

    <a
      href="/apply"
      class="inline-flex items-center justify-center mt-10 px-10 py-4 rounded-xl font-semibold
             bg-gradient-to-r from-orange-500 via-pink-500 to-fuchsia-600
             text-white hover:opacity-90 transition"
    >
      Check qualification →
    </a>

    <p class="mt-6 text-sm text-slate-400">
      Fit check only. No pressure.
    </p>
  </div>
</section>

</Layout>
