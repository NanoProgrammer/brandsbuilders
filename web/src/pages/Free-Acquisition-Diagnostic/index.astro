---
import Layout from '../../layouts/Layout.astro';
import { Image } from "astro:assets";
import heroAudit from "../../assets/hero-website-audit.jpg";

const seo = {
  title: 'Free Website Due Diligence Audit | BrandsBuilders',
  description:
    'A free working session to uncover website performance, tracking, and conversion risks before you invest more traffic or ad spend.',
  canonical: 'https://brandsbuilders.agency/free-website-audit'
};

const bullets = [
  {
    title: 'Website performance snapshot',
    desc: 'We review Core Web Vitals, mobile speed, and load behavior to see whether your site can handle more traffic safely.'
  },
  {
    title: 'Conversion friction detection',
    desc: 'We identify where visitors drop off across messaging clarity, routing, trust signals, and booking or contact flow.'
  },
  {
    title: 'Tracking & attribution check',
    desc: 'We verify GA4, form, call, and booking tracking to ensure decisions are based on real data — not guesses.'
  },
  {
    title: 'Scalability & structure review',
    desc: 'We assess whether your website can support booking systems, CRM, or paid traffic without requiring a rebuild.'
  },
  {
    title: 'Ownership & risk audit',
    desc: 'We confirm domain, hosting, and code ownership so your website is a true business asset — not a dependency.'
  }
];

const faqs = [
  {
    q: 'Is this a sales call?',
    a: 'No. It is a working session to evaluate whether your website is ready to scale safely. You receive a clear Go / No-Go verdict.'
  },
  {
    q: 'Who is this audit for?',
    a: 'Owner-led service businesses in Alberta planning to invest in growth and wanting clarity before spending on ads, SEO, or redesigns.'
  },
  {
    q: 'Do you need access to my accounts?',
    a: 'No. The audit starts using public signals. Access is requested only if you later proceed with implementation.'
  },
  {
    q: 'What do I receive after the call?',
    a: 'A short written recap outlining discovered risks, priority fixes, and a clear recommendation.'
  }
];
---

<Layout seo={seo}>

  <!-- HERO (LCP OPTIMIZED) -->
  <section class="bg-slate-950 py-6 lg:py-12">
    <div class="container mx-auto px-6 max-w-6xl grid lg:grid-cols-2 gap-12 items-center">

      <!-- Text -->
      <div>
        <p class="text-sm text-slate-400 mb-4">
          Free Website Due Diligence Audit
        </p>

        <h1 class="text-4xl sm:text-5xl font-semibold text-white mb-6 leading-tight">
          Know if your website is ready for growth — before spending more
        </h1>

        <p class="text-lg text-slate-400 leading-relaxed max-w-xl mb-8">
          A free working session to uncover hidden website performance,
          tracking, and conversion risks before investing in more traffic or ads.
        </p>

        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href="/apply"
            class="inline-block px-8 py-4 border border-slate-600 rounded-lg text-white hover:border-white transition text-center"
          >
            Apply for the audit →
          </a>

          <a
            href="/process"
            class="inline-block px-8 py-4 border border-slate-800 rounded-lg text-slate-300 hover:text-white hover:border-slate-600 transition text-center"
          >
            See the process
          </a>
        </div>

        <p class="mt-6 text-sm text-slate-500">
          No pitch. No pressure. Just clarity.
        </p>
      </div>

      <!-- Image -->
      <div class="flex justify-center lg:justify-end">
        <Image
          src={heroAudit}
          alt="Website performance and conversion audit dashboard"
          width={620}
          height={440}
          priority
          class="rounded-xl border border-slate-800 object-cover"
        />
      </div>

    </div>
  </section>

  <!-- WHAT IT EVALUATES -->
  <section class="bg-white py-20 border-t border-slate-200">
    <div class="container mx-auto px-6 max-w-6xl">

      <div class="mb-12 max-w-3xl">
        <h2 class="text-2xl sm:text-3xl font-semibold mb-4 text-slate-900">
          What the audit evaluates
        </h2>
        <p class="text-lg text-slate-600 leading-relaxed">
          We focus on the factors that determine whether scaling is safe — not guesswork.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {bullets.map((b) => (
          <div class="border border-slate-200 rounded-lg p-6">
            <h3 class="text-lg font-medium text-slate-900 mb-2">{b.title}</h3>
            <p class="text-slate-600 leading-relaxed">{b.desc}</p>
          </div>
        ))}
      </div>

    </div>
  </section>

  <!-- HOW IT WORKS -->
  <section class="bg-white py-20 border-t border-slate-200">
    <div class="container mx-auto px-6 max-w-6xl">

      <h2 class="text-2xl sm:text-3xl font-semibold mb-10 text-slate-900">
        How it works
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-10">

        <div>
          <p class="text-sm text-slate-500 mb-2">Step 1</p>
          <h3 class="text-lg font-medium text-slate-900 mb-2">You apply</h3>
          <p class="text-slate-600 leading-relaxed">
            A short form to confirm fit and context.
          </p>
        </div>

        <div>
          <p class="text-sm text-slate-500 mb-2">Step 2</p>
          <h3 class="text-lg font-medium text-slate-900 mb-2">We review</h3>
          <p class="text-slate-600 leading-relaxed">
            We analyze your site and public signals before the call.
          </p>
        </div>

        <div>
          <p class="text-sm text-slate-500 mb-2">Step 3</p>
          <h3 class="text-lg font-medium text-slate-900 mb-2">You get clarity</h3>
          <p class="text-slate-600 leading-relaxed">
            You receive a Go / No-Go decision and priority fixes.
          </p>
        </div>

      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="bg-white py-20 border-t border-slate-200">
    <div class="container mx-auto px-6 max-w-5xl">

      <h2 class="text-2xl sm:text-3xl font-semibold mb-10 text-slate-900">
        FAQ
      </h2>

      <div class="space-y-4">
        {faqs.map((f) => (
          <details class="border border-slate-200 rounded-lg p-6">
            <summary class="font-medium cursor-pointer text-slate-900">
              {f.q}
            </summary>
            <p class="mt-4 text-slate-600 leading-relaxed">
              {f.a}
            </p>
          </details>
        ))}
      </div>

    </div>
  </section>

  <!-- FINAL CTA -->
  <section class="bg-slate-950 text-white py-20 border-t border-slate-800">
    <div class="container mx-auto px-6 max-w-5xl text-center">

      <h2 class="text-2xl sm:text-3xl font-semibold mb-6">
        Ready for clarity?
      </h2>

      <p class="text-lg text-slate-400 mb-10 max-w-2xl mx-auto">
        If you're planning to invest in growth, this audit prevents costly mistakes.
      </p>

      <a
        href="/apply"
        class="inline-block px-8 py-4 border border-slate-600 rounded-lg text-white hover:border-white transition"
      >
        Book Free Website Audit →
      </a>

    </div>
  </section>

</Layout>
