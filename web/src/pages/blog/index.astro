---
// src/pages/blog.astro
import Layout from '../../layouts/Layout.astro';

// Mock blog posts data - En producción esto vendría de un CMS o archivos markdown
const blogPosts = [
  {
    slug: 'web-design-trends-2025',
    title: 'Top 10 Web Design Trends for 2025',
    excerpt: 'Discover the latest web design trends that will dominate 2025, from AI-powered interfaces to sustainable design practices.',
    author: 'Sarah Chen',
    authorAvatar: 'SC',
    date: '2025-01-15',
    readTime: '8 min read',
    category: 'Design',
    image: '/blog/web-design-trends-2025.jpg',
    featured: true
  },
  {
    slug: 'local-seo-alberta-businesses',
    title: 'Local SEO Strategy for Alberta Small Businesses',
    excerpt: 'Learn how to dominate local search results in Calgary, Edmonton, and Airdrie with our proven SEO strategies.',
    author: 'Mike Rodriguez',
    authorAvatar: 'MR',
    date: '2025-01-10',
    readTime: '12 min read',
    category: 'SEO',
    image: '/blog/local-seo-alberta.jpg',
    featured: false
  },
  {
    slug: 'branding-psychology-small-business',
    title: 'The Psychology Behind Effective Small Business Branding',
    excerpt: 'Understand how color psychology, typography, and visual hierarchy can make your brand more memorable and trustworthy.',
    author: 'Emma Johnson',
    authorAvatar: 'EJ',
    date: '2025-01-05',
    readTime: '6 min read',
    category: 'Branding',
    image: '/blog/branding-psychology.jpg',
    featured: false
  }
];

const seo = {
  title: 'Blog - BrandsBuilders Agency | Web Design & Digital Marketing Tips',
  description: 'Expert insights on web design, digital marketing, branding, and SEO for small businesses in Alberta. Stay updated with the latest industry trends.',
  keywords: 'web design blog, digital marketing tips, SEO guide, branding advice, Alberta business, Calgary web design',
  canonical: 'https://brandsbuilders.agency/blog'
};
---

<Layout seo={seo}>
  <!-- Hero Section -->
  <section class="relative py-24 lg:py-32 overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0 bg-gradient-to-br from-slate-950 via-slate-900 to-violet-950"></div>
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-gradient-to-br from-violet-600 to-purple-600 rounded-full mix-blend-multiply filter blur-xl animate-pulse"></div>
      <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-gradient-to-br from-fuchsia-600 to-pink-600 rounded-full mix-blend-multiply filter blur-xl animate-pulse"></div>
    </div>

    <div class="container mx-auto px-6 relative z-10">
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-5xl lg:text-7xl font-bold mb-8 bg-gradient-to-r from-white via-violet-200 to-fuchsia-200 bg-clip-text text-transparent">
          Our Blog
        </h1>
        <p class="text-xl lg:text-2xl text-slate-300 mb-8 leading-relaxed">
          Expert insights, tips, and strategies to grow your business online
        </p>
        
        <!-- Search Bar -->
        <div class="relative max-w-2xl mx-auto">
          <input 
            type="text" 
            placeholder="Search articles..." 
            class="w-full px-6 py-4 bg-slate-800/50 backdrop-blur-lg border border-slate-700 rounded-2xl text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:border-transparent"
          >
          <svg class="absolute right-4 top-1/2 transform -translate-y-1/2 w-6 h-6 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
      </div>
    </div>
  </section>

  <!-- Blog Posts Section -->
  <section class="py-24 bg-slate-950 relative overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width=60 height=60 viewBox=0 0 60 60 xmlns=http://www.w3.org/2000/svg%3E%3Cg fill=none fill-rule=evenodd%3E%3Cg fill=%23a855f7 fill-opacity=0.4%3E%3Ccircle cx=30 cy=30 r=1/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] bg-repeat"></div>
    </div>

    <div class="container mx-auto px-6 relative z-10">
      <!-- Featured Post -->
      {blogPosts.filter(post => post.featured).map(post => (
        <div class="mb-20">
          <div class="text-center mb-12">
            <span class="inline-block px-4 py-2 bg-violet-500/20 text-violet-300 rounded-full text-sm font-medium border border-violet-500/30 mb-4">
              Featured Article
            </span>
          </div>
          
          <div class="glass rounded-3xl overflow-hidden hover:transform hover:scale-[1.02] transition-all duration-300">
            <div class="grid lg:grid-cols-2 gap-0">
              <div class="relative">
                <div class="aspect-video lg:aspect-auto lg:h-full bg-gradient-to-br from-violet-500 to-purple-600 flex items-center justify-center">
                  <div class="text-white text-center">
                    <div class="w-20 h-20 bg-white/20 rounded-2xl flex items-center justify-center mx-auto mb-4">
                      <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                      </svg>
                    </div>
                    <p class="text-sm opacity-80">Featured Image</p>
                  </div>
                </div>
              </div>
              
              <div class="p-8 lg:p-12">
                <div class="flex items-center gap-4 mb-6">
                  <span class="px-3 py-1 bg-violet-500/20 text-violet-300 rounded-full text-sm font-medium border border-violet-500/30">
                    {post.category}
                  </span>
                  <span class="text-slate-400 text-sm">{post.readTime}</span>
                </div>
                
                <h2 class="text-3xl lg:text-4xl font-bold mb-4 text-white hover:text-violet-300 transition-colors">
                  <a href={`/blog/${post.slug}`}>{post.title}</a>
                </h2>
                
                <p class="text-slate-300 text-lg mb-6 leading-relaxed">
                  {post.excerpt}
                </p>
                
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-3">
                    <div class="w-10 h-10 bg-gradient-to-br from-violet-500 to-purple-600 rounded-full flex items-center justify-center text-white font-semibold text-sm">
                      {post.authorAvatar}
                    </div>
                    <div>
                      <div class="text-white font-medium">{post.author}</div>
                      <div class="text-slate-400 text-sm">{new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</div>
                    </div>
                  </div>
                  
                  <a 
                    href={`/blog/${post.slug}`}
                    class="group flex items-center gap-2 text-violet-400 hover:text-violet-300 font-medium transition-colors"
                  >
                    Read More
                    <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}

      <!-- Regular Posts Grid -->
      <div class="grid md:grid-cols-2 gap-8">
        {blogPosts.filter(post => !post.featured).map(post => (
          <article class="glass rounded-3xl overflow-hidden hover:transform hover:scale-[1.02] transition-all duration-300 group">
            <!-- Image -->
            <div class="aspect-video bg-gradient-to-br from-slate-700 to-slate-800 flex items-center justify-center">
              <div class="text-slate-400 text-center">
                <div class="w-16 h-16 bg-slate-600/50 rounded-xl flex items-center justify-center mx-auto mb-3">
                  <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                  </svg>
                </div>
                <p class="text-sm">Blog Image</p>
              </div>
            </div>
            
            <!-- Content -->
            <div class="p-8">
              <div class="flex items-center gap-4 mb-4">
                <span class="px-3 py-1 bg-violet-500/20 text-violet-300 rounded-full text-sm font-medium border border-violet-500/30">
                  {post.category}
                </span>
                <span class="text-slate-400 text-sm">{post.readTime}</span>
              </div>
              
              <h3 class="text-xl font-bold mb-3 text-white group-hover:text-violet-300 transition-colors">
                <a href={`/blog/${post.slug}`}>{post.title}</a>
              </h3>
              
              <p class="text-slate-300 mb-6 leading-relaxed">
                {post.excerpt}
              </p>
              
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <div class="w-8 h-8 bg-gradient-to-br from-violet-500 to-purple-600 rounded-full flex items-center justify-center text-white font-semibold text-xs">
                    {post.authorAvatar}
                  </div>
                  <div>
                    <div class="text-white text-sm font-medium">{post.author}</div>
                    <div class="text-slate-400 text-xs">{new Date(post.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}</div>
                  </div>
                </div>
                
                <a 
                  href={`/blog/${post.slug}`}
                  class="text-violet-400 hover:text-violet-300 transition-colors"
                >
                  <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>

      <!-- Newsletter CTA -->
      <div class="mt-20">
        <div class="glass rounded-3xl p-8 lg:p-12 text-center">
          <h3 class="text-3xl lg:text-4xl font-bold mb-4 text-white">
            Stay Updated
          </h3>
          <p class="text-slate-300 text-lg mb-8 max-w-2xl mx-auto">
            Subscribe to our newsletter and get the latest web design trends, marketing tips, and business insights delivered to your inbox.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
            <input 
              type="email" 
              placeholder="Your email address" 
              class="flex-1 px-6 py-4 bg-slate-800/50 border border-slate-700 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-violet-500"
            >
            <button class="px-8 py-4 bg-gradient-to-r from-violet-600 to-purple-600 text-white font-semibold rounded-xl hover:from-violet-700 hover:to-purple-700 transition-all duration-300 transform hover:scale-105">
              Subscribe
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>