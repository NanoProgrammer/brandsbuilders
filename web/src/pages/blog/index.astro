---
import Layout from '../../layouts/Layout.astro';

// Temporary data (luego CMS / markdown)
const blogPosts = [
  {
    slug: 'client-acquisition-systems-alberta',
    title: 'Client acquisition systems for Alberta service businesses',
    excerpt:
      'How demand, funnel structure, and financial logic interact — and why most local businesses struggle to scale profitably.',
    date: '2025-01-15',
    readTime: '7 min read',
    category: 'Acquisition Systems',
  },
  {
    slug: 'why-ads-fail-local-businesses',
    title: 'Why ads fail for most local businesses',
    excerpt:
      'The real reasons campaigns don’t work have less to do with platforms and more to do with economics, clarity, and trust.',
    date: '2025-01-10',
    readTime: '6 min read',
    category: 'Strategy',
  },
  {
    slug: 'when-growth-does-not-make-sense',
    title: 'When growth does not make financial sense',
    excerpt:
      'A breakdown of break-even logic and why scaling traffic can quietly destroy margins.',
    date: '2025-01-05',
    readTime: '5 min read',
    category: 'Financial Logic',
  }
];

const seo = {
  title: 'Insights — BrandsBuilders | Client Acquisition & Growth Systems',
  description:
    'Thoughtful insights on client acquisition systems, funnel diagnostics, and financial logic for Alberta-based service businesses.',
  canonical: 'https://brandsbuilders.agency/blog'
};
---

<Layout seo={seo}>

  <!-- HERO -->
  <section class="bg-slate-950 py-24">
    <div class="container mx-auto px-6 max-w-3xl">
      <h1 class="text-4xl sm:text-5xl font-semibold text-white mb-6">
        Insights on growth, systems, and acquisition
      </h1>

      <p class="text-slate-400 text-lg leading-relaxed">
        Notes, frameworks, and breakdowns on how client acquisition actually
        works for local and service businesses in Alberta.
        No trends. No hacks. Just clarity.
      </p>
    </div>
  </section>

  <!-- POSTS -->
  <section class="bg-slate-950 pb-28">
    <div class="container mx-auto px-6 max-w-3xl space-y-12">

      {blogPosts.map(post => (
        <article class="border-b border-slate-800 pb-10">
          <div class="flex items-center gap-4 text-sm text-slate-500 mb-3">
            <span>{post.category}</span>
            <span>•</span>
            <span>{post.readTime}</span>
            <span>•</span>
            <span>
              {new Date(post.date).toLocaleDateString('en-CA', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </span>
          </div>

          <h2 class="text-2xl font-medium text-white mb-3">
            <a
              href={`/blog/${post.slug}`}
              class="hover:underline underline-offset-4"
            >
              {post.title}
            </a>
          </h2>

          <p class="text-slate-400 leading-relaxed mb-4">
            {post.excerpt}
          </p>

          <a
            href={`/blog/${post.slug}`}
            class="text-sm text-slate-300 hover:text-white transition"
          >
            Read →
          </a>
        </article>
      ))}

    </div>
  </section>

</Layout>
