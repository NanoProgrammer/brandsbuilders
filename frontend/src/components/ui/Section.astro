---
interface Props { id?: string; title?: string; subtitle?: string; class?: string }
const { id, title, subtitle, class: cls = '' } = Astro.props as Props;
---
<section id={id} class={`py-16 ${cls}`}>
<div class="max-w-7xl mx-auto px-6">
{title && <h2 class="text-2xl md:text-3xl font-bold">{title}</h2>}
{subtitle && <p class="mt-2 text-white/70 max-w-2xl">{subtitle}</p>}
<slot />
</div>
</section>