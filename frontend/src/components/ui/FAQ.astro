---
interface Props { quote: string; author?: string }
const { quote, author } = Astro.props as Props;
---
<blockquote class="mt-8 rounded-2xl border border-white/10 bg-white/[0.03] p-6 italic text-white/80">
  “{quote}”
  {author && <footer class="mt-3 not-italic text-sm text-white/60">— {author}</footer>}
</blockquote>
