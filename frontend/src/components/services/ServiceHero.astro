---
interface Props { title: string; fromPrice?: string; bullets?: string[]; cta?: { href: string; label: string } }
const { title, fromPrice, bullets = [], cta = { href: "/contact", label: "Book a call" } } = Astro.props as Props;
---
<header class="rounded-2xl border border-white/10 bg-white/[0.03] p-6">
  <h1 class="text-3xl md:text-4xl font-bold">{title}</h1>
  {fromPrice && <p class="mt-1 text-white/70 text-sm">Typical range: <span class="font-medium">{fromPrice}</span></p>}
  {bullets.length > 0 && (
    <ul class="mt-4 grid sm:grid-cols-2 gap-2 text-sm text-white/80">
      {bullets.map((b) => <li class="flex items-start gap-2"><span class="mt-1 h-1.5 w-1.5 rounded-full bg-cyan-300"></span>{b}</li>)}
    </ul>
  )}
  <a href={cta.href} class="mt-6 inline-flex rounded-xl bg-white text-black px-4 py-2 font-medium hover:bg-white/90">{cta.label}</a>
</header>
