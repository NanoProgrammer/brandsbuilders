---
interface KPI { label: string; value: string }
interface Props { title: string; kpis?: KPI[]; quote?: string }
const { title, kpis = [], quote } = Astro.props as Props;
---
<aside class="rounded-2xl border border-white/10 bg-white/[0.03] p-6">
  <h3 class="font-semibold">{title}</h3>
  {kpis.length > 0 && (
    <dl class="mt-4 grid grid-cols-2 gap-4">
      {kpis.map((k) => (
        <div>
          <dt class="text-xs text-white/50">{k.label}</dt>
          <dd class="text-lg font-bold">{k.value}</dd>
        </div>
      ))}
    </dl>
  )}
  {quote && <p class="mt-4 text-sm text-white/70 italic">“{quote}”</p>}
</aside>
