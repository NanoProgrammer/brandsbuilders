---
interface Item { title: string; text: string }
const { items = [] } = Astro.props as { items: Item[] };
---
<section class="py-10">
  <div class="grid md:grid-cols-3 gap-4">
    {items.map((d) => (
      <div class="rounded-2xl border border-white/10 bg-white/[0.03] p-5">
        <h3 class="font-semibold">{d.title}</h3>
        <p class="mt-2 text-sm text-white/70">{d.text}</p>
      </div>
    ))}
  </div>
</section>
