---
interface KPI { label: string; value: string }
const { items = [] } = Astro.props as { items: KPI[] };
---
<dl class="mt-8 grid grid-cols-2 md:grid-cols-4 gap-4">
  {items.map((k) => (
    <div class="rounded-2xl border border-white/10 bg-white/[0.03] p-4 text-center">
      <dt class="text-xs text-white/50">{k.label}</dt>
      <dd class="text-xl font-bold">{k.value}</dd>
    </div>
  ))}
</dl>
