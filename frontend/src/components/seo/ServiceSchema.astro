---
interface Props { name: string; description: string; url: string; priceFrom?: string }
const { name, description, url, priceFrom } = Astro.props as Props;
const data = {
  "@context":"https://schema.org",
  "@type":"Service",
  "name": name,
  "description": description,
  "provider": { "@type":"LocalBusiness", "name":"BrandsBuilders", "areaServed":["Airdrie","Calgary","Edmonton","Red Deer"], "address": { "@type":"PostalAddress", "addressRegion":"AB", "addressCountry":"CA" } },
  "url": new URL(url, "https://brandsbuilders.agency").toString(),
  "offers": priceFrom ? { "@type":"Offer", "priceCurrency":"CAD", "price": priceFrom.replace(/[^0-9.]/g,''), "availability":"https://schema.org/InStock" } : undefined
};
---
<script type="application/ld+json">{JSON.stringify(data)}</script>
