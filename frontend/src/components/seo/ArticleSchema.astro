---
interface Props { headline: string; url: string; description?: string; datePublished?: string; image?: string }
const { headline, url, description="", datePublished= new Date().toISOString(), image="/og.jpg" } = Astro.props as Props;
const data = {
  "@context":"https://schema.org",
  "@type":"Article",
  "headline": headline,
  "description": description,
  "image": image,
  "datePublished": datePublished,
  "author": { "@type":"Organization", "name":"BrandsBuilders" },
  "publisher": { "@type":"Organization", "name":"BrandsBuilders" },
  "mainEntityOfPage": new URL(url, "https://brandsbuilders.agency").toString()
};
---
<script type="application/ld+json">{JSON.stringify(data)}</script>
