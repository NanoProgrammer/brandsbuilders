---
interface Item {
  title: string;
  text: string;
}
const { items = [] } = Astro.props as { items: Item[] };
---

<section class="py-16">
  <div class="max-w-7xl mx-auto px-6 grid md:grid-cols-3 gap-6">
    {
      items.map((f) => (
        <div
          class="group relative rounded-2xl border border-white/10 bg-white/[0.03] p-6 hover:bg-white/[0.06] transition"
          data-aos="fade-up"
        >
          <div
            class="absolute inset-px rounded-2xl opacity-0 group-hover:opacity-100 blur-xl -z-10"
            style="background:radial-gradient(60% 60% at 50% 50%, rgba(56,189,248,0.15), rgba(167,139,250,0.15));"
          />
          <h3 class="text-lg font-semibold">{f.title}</h3>
          <p class="mt-3 text-white/70 text-sm">{f.text}</p>
        </div>
      ))
    }
  </div>
</section>
