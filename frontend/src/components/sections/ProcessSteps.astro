---
const { steps = ["Discovery", "Design", "Build", "Launch & Measure"] } =
  Astro.props as { steps: string[] };
---

<section class="py-20">
  <div class="max-w-7xl mx-auto px-6">
    <h2 class="text-2xl md:text-3xl font-bold">Process</h2>
    <ol class="mt-8 grid md:grid-cols-4 gap-6">
      {
        steps.map((s, i) => (
          <li
            class="relative rounded-2xl border border-white/10 bg-white/[0.03] p-6"
            data-aos="fade-up"
          >
            <div class="mb-4 inline-flex h-9 w-9 items-center justify-center rounded-full bg-white/10 text-white/80 font-semibold">
              {i + 1}
            </div>
            <p class="font-medium">{s}</p>
          </li>
        ))
      }
    </ol>
  </div>
</section>
