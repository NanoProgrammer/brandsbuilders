---
interface Pack {
  id?: string;
  name: string;
  priceRange: string;
  includes?: string[];
  ctaHref?: string;
}
const { packages = [] } = Astro.props as { packages: Pack[] };
---

<section>
  <div class="grid md:grid-cols-3 gap-6">
    {
      packages.map((p) => (
        <article
          id={p.id}
          class="relative rounded-2xl border border-white/10 bg-white/[0.03] p-6"
        >
          <div
            class="absolute inset-px rounded-2xl -z-10 opacity-0 hover:opacity-100 transition blur-xl"
            style="background:radial-gradient(60% 60% at 50% 50%, rgba(56,189,248,0.15), rgba(167,139,250,0.15));"
          />
          <h3 class="text-xl font-bold">{p.name}</h3>
          <p class="mt-1 text-white/70 text-sm">{p.priceRange}</p>
          {p.includes?.length && (
            <ul class="mt-4 space-y-2 text-sm text-white/80">
              {p.includes.map((i) => (
                <li class="flex items-start gap-2">
                  <span class="mt-0.5 h-1.5 w-1.5 rounded-full bg-cyan-300" />
                  {i}
                </li>
              ))}
            </ul>
          )}
          <a
            href={p.ctaHref ?? "/contact"}
            class="mt-6 inline-flex rounded-xl bg-white text-black px-4 py-2 font-medium hover:bg-white/90"
          >
            Get quote
          </a>
        </article>
      ))
    }
  </div>
</section>
