---
const {
  items = [
    "Mobile Lighthouse ≥90 on new pages",
    "LCP under 2.5s (media/scripts dependent)",
    "WCAG essentials & bug‑fix warranty",
  ],
} = Astro.props as { items: string[] };
---

<section class="py-16">
  <div class="max-w-7xl mx-auto px-6 grid md:grid-cols-3 gap-6">
    {
      items.map((g) => (
        <div
          class="rounded-2xl border border-white/10 bg-white/[0.03] p-6"
          data-aos="zoom-in"
        >
          <h3 class="font-semibold">Guarantee</h3>
          <p class="mt-3 text-white/70 text-sm">{g}</p>
        </div>
      ))
    }
  </div>
</section>
