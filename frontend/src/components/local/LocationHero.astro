---
interface Props { city?: string; region?: string; title?: string; subtitle?: string }
const { city="Alberta", region="CA", title=`Web & Local SEO in ${city}`, subtitle="Owner-led SMBs. Faster sites, clearer messaging." } = Astro.props as Props;
---
<section class="relative overflow-hidden py-20 text-center">
  <div class="pointer-events-none absolute inset-0 -z-10">
    <div class="absolute -top-24 -left-24 h-80 w-80 rounded-full blur-3xl opacity-30"
         style="background:radial-gradient(60% 60% at 50% 50%, #60a5fa33 0%, transparent 70%);"></div>
    <div class="absolute -bottom-24 -right-24 h-96 w-96 rounded-full blur-3xl opacity-20"
         style="background:radial-gradient(60% 60% at 50% 50%, #a78bfa33 0%, transparent 70%);"></div>
  </div>
  <p class="text-sm tracking-widest text-white/60 uppercase">{city} Â· {region}</p>
  <h1 class="mt-3 text-4xl md:text-6xl font-extrabold">{title}</h1>
  <p class="mt-4 text-white/70 max-w-2xl mx-auto">{subtitle}</p>
</section>
