---
interface Props {
  name?: string; phone?: string; email?: string;
  address1?: string; city?: string; region?: string; postal?: string; country?: string;
}
const {
  name="BrandsBuilders", phone="+1-403-000-0000", email="hello@brandsbuilders.agency",
  address1="—", city="Airdrie", region="AB", postal="—", country="CA"
} = Astro.props as Props;
---
<div class="rounded-2xl border border-white/10 bg-white/[0.03] p-6">
  <h3 class="font-semibold">{name}</h3>
  <div class="mt-3 space-y-1 text-sm text-white/80">
    <p>{address1}, {city}, {region} {postal}</p>
    <p>{country}</p>
    <p><a href={`tel:${phone}`} class="hover:underline">{phone}</a> · <a href={`mailto:${email}`} class="hover:underline">{email}</a></p>
  </div>
</div>
