---
interface City { name: string; href?: string }
const { areas = [
  { name: "Airdrie" }, { name: "Calgary" }, { name: "Edmonton" }, { name: "Red Deer" }
] } = Astro.props as { areas?: City[] };
---
<ul class="grid grid-cols-2 sm:grid-cols-4 gap-3">
  {areas.map((c) => (
    <li>
      {c.href
        ? <a href={c.href} class="block rounded-xl border border-white/10 bg-white/[0.03] px-3 py-2 text-center hover:bg-white/[0.06]">{c.name}</a>
        : <span class="block rounded-xl border border-white/10 bg-white/[0.03] px-3 py-2 text-center">{c.name}</span>}
    </li>
  ))}
</ul>
