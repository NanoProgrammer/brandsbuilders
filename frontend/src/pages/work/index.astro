---
import SiteLayout from "../../layouts/SiteLayout.astro";
import Breadcrumbs from "../../components/seo/Breadcrumbs.astro";
import HeroPrimary from "../../components/sections/HeroPrimary.astro";
import ProjectCard from "../../components/work/ProjectCard.astro";
import CTASection from "../../components/ui/CTASection.astro";


const title = "Web Design Case Studies in Alberta | SEO Results";
const description = "Selected case studies showing faster pages, Local SEO lifts and clearer offers across Airdrie, Calgary & Edmonton.";
const canonical = "https://brandsbuilders.agency/work";
const projects = [
{ href:"/work/project/airdrie-services", title:"Airdrie Services", cover:"/assets/work/airdrie.jpg", tags:["Local SEO","Web"], kpis:[{label:"Leads",value:"+42%"}]},
{ href:"/work/project/calgary-ecom", title:"Calgary E‑commerce", cover:"/assets/work/calgary.jpg", tags:["E‑com","CRO"], kpis:[{label:"CR",value:"+18%"}]}
];
---
<SiteLayout {title} {description} {canonical} jsonLd={[]}>
<div class="max-w-6xl mx-auto px-6 py-6">
<Breadcrumbs items={[{name:"Home",href:"/"},{name:"Work",href:"/work"}]} />
</div>
<HeroPrimary title="Case studies — Alberta" subtitle="What we changed, why, and what happened." />
<section class="max-w-6xl mx-auto px-6 py-16 grid md:grid-cols-2 gap-8">
{projects.map((p) => <ProjectCard {...p} />)}
</section>
<CTASection title="Want a case like these?" cta={{href:"/contact",label:"Book a call"}} />
</SiteLayout>
