---
import SiteLayout from "../../layouts/SiteLayout.astro";
import HeroPrimary from "../../components/sections/HeroPrimary.astro";
import ContactForm from "../../components/forms/ContactForm.astro";
import NAPBlock from "../../components/local/NAPBlock.astro";
import Breadcrumbs from "../../components/seo/Breadcrumbs.astro";
import LocalBusinessSchema from "../../components/seo/LocalBusinessSchema.astro";


const title = "Contact Web Design Agency Alberta | BrandsBuilders";
const description = "Request a quote — we serve Airdrie, Calgary, Edmonton & Red Deer. Fast reply within 1 business day.";
const canonical = "https://brandsbuilders.agency/contact";
---
<SiteLayout {title} {description} {canonical} jsonLd={[]}>
<div class="max-w-6xl mx-auto px-6 py-6">
<Breadcrumbs items={[{name:"Home",href:"/"},{name:"Contact",href:"/contact"}]} />
</div>


<HeroPrimary title="Contact our Alberta web design agency" subtitle="Tell us your goals; we’ll recommend the fastest path to revenue." />


<section class="max-w-6xl mx-auto px-6 py-16 grid md:grid-cols-2 gap-10">
<ContactForm action="/thank-you" fields={["name","email","company","message"]} successRedirect="/thank-you" />
<NAPBlock phone="+1-403-000-0000" city="Airdrie" region="AB" country="CA" />
</section>


<LocalBusinessSchema />
</SiteLayout>