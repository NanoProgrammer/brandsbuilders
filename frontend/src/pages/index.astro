---
import SiteLayout from "../layouts/SiteLayout.astro";
import HeroPrimary from "../components/sections/HeroPrimary.astro";
import LogosCloud from "../components/ui/LogosCloud.astro";
import FeaturesGrid from "../components/sections/FeaturesGrid.astro";
import ProcessSteps from "../components/sections/ProcessSteps.astro";
import MetricsStrip from "../components/sections/MetricsStrip.astro";
import Testimonials from "../components/sections/Testimonials.astro";
import CTASection from "../components/ui/CTASection.astro";
import WebSiteSchema from "../components/seo/WebSiteSchema.astro";
import LocalBusinessSchema from "../components/seo/LocalBusinessSchema.astro";


const title = "Web Design Alberta — BrandsBuilders | Local SEO & Branding";
const description = "Alberta web design agency for owner‑led SMBs. Conversion‑first websites, Local SEO and branding. Serving Airdrie, Calgary, Edmonton & Red Deer.";
const canonical = "https://brandsbuilders.agency/";
---
<SiteLayout {title} {description} {canonical} jsonLd={[]}>
<HeroPrimary
eyebrow="Alberta · Canada"
title="Web Design in Alberta that drives revenue"
subtitle="Owner‑led SMBs. Faster sites, clearer messaging, measurable local demand."
ctaPrimary={{ href: "/contact", label: "Book a call" }}
ctaSecondary={{ href: "/work", label: "See case studies" }}
/>


<LogosCloud />


<FeaturesGrid
items={[
{ title:"Local SEO Alberta", text:"Service + location pages, GBP, schema" },
{ title:"Conversion‑first Web", text:"Lighthouse ≥90 mobile, LCP < 2.5s" },
{ title:"Branding", text:"Identity & messaging for growth" }
]}
/>


<ProcessSteps steps={["Discovery","Design","Build","Launch & Measure"]} />
<MetricsStrip metrics={[{label:"Projects",value:"250+"},{label:"Years",value:"8+"},{label:"Avg. LCP",value:"<2.5s"}]} />
<Testimonials />


<CTASection title="Ready to grow locally?" subtitle="Airdrie · Calgary · Edmonton · Red Deer" cta={{href:"/contact",label:"Book a call"}} />


<WebSiteSchema />
<LocalBusinessSchema />
</SiteLayout>