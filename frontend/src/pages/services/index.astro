---
import SiteLayout from "../../layouts/SiteLayout.astro";
import HeroPrimary from "../../components/sections/HeroPrimary.astro";
import FeaturesGrid from "../../components/sections/FeaturesGrid.astro";
import PricingTable from "../../components/sections/PricingTable.astro";
import Guarantees from "../../components/sections/Guarantees.astro";
import ProcessSteps from "../../components/sections/ProcessSteps.astro";
import FAQ from "../../components/ui/FAQ.astro";
import CTASection from "../../components/ui/CTASection.astro";
import Breadcrumbs from "../../components/seo/Breadcrumbs.astro";
import OfferCatalogSchema from "../../components/seo/OfferCatalogSchema.astro";


const title = "Services — Web Design, Local SEO & Branding in Alberta";
const description = "Alberta services for SMBs: web design, Local SEO, branding and custom e‑commerce. Conversion‑first and fast.";
const canonical = "https://brandsbuilders.agency/services";
const packages = [
{ id:"a1", name:"A1 — Go‑to‑Market Launch", priceRange:"$2,000–$3,200 CAD", includes:["Brand light","Landing 5–7 sections","Technical SEO + Analytics"] },
{ id:"a2", name:"A2 — Local Service Site (3–7)", priceRange:"$3,000–$4,500 CAD", includes:["Brand light","3–7 pages","Local on‑page SEO + GBP"] },
{ id:"a3", name:"A3 — Custom E‑commerce (≤20)", priceRange:"$7,500–$10,000 CAD", includes:["PLP/PDP","Custom/Headless checkout","Product schema"] },
{ id:"a4", name:"A4 — Rebrand & Site Foundation", priceRange:"$7,500–$12,500 CAD", includes:["Identity system","CMS","On‑page base"] },
{ id:"a5", name:"A5 — Content System & On‑Page", priceRange:"$2,500–$5,000 CAD", includes:["Models + templates","On‑page 10–20 URLs","FAQ/Article schema"] },
{ id:"a6", name:"A6 — E‑commerce Foundation", priceRange:"$13,000–$20,000 CAD", includes:["Catalog/PLP/PDP pro","Checkout","Product/Breadcrumb schema"] },
];
---
<SiteLayout {title} {description} {canonical} jsonLd={[]}>
<div class="max-w-6xl mx-auto px-6 py-6">
<Breadcrumbs items={[{name:"Home",href:"/"},{name:"Services",href:"/services"}]} />
</div>


<HeroPrimary title="Web design, Local SEO & Branding in Alberta" subtitle="Built for speed, clarity and local demand." />


<FeaturesGrid
items={[
{ title:"Brand Launch", text:"Identity, voice & tone, social kit" },
{ title:"Web (CRO‑first)", text:"Mobile Lighthouse ≥90, events & analytics" },
{ title:"Local SEO", text:"Service + location pages, GBP, schema" }
]}
/>


<section id="pricing" class="max-w-6xl mx-auto px-6 py-20">
<h2 class="text-3xl md:text-4xl font-bold">Packages & Pricing</h2>
<p class="mt-2 text-white/70">Ranges reflect scope, speed and media/integrations.</p>
<PricingTable packages={packages} />
</section>


<Guarantees items={[
"Mobile Lighthouse ≥90 on new pages",
"LCP under 2.5s (media/scripts dependent)",
"WCAG essentials & bug‑fix warranty"
]} />


<ProcessSteps steps={["Discovery","Design","Build","Launch & Measure"]} />


<FAQ items={[
{ q:"Do you work outside Alberta?", a:"Yes, but our focus is Airdrie, Calgary, Edmonton & Red Deer for stronger local SEO."},
{ q:"Why price ranges?", a:"Most projects are custom; ranges reflect scope, speed, media and integrations."}
]} />


<CTASection title="See if we’re a fit" cta={{href:"/contact",label:"Book a call"}} />


<OfferCatalogSchema items={packages.map(p => ({ name:p.name, url:`/services#${p.id}`, priceRange:p.priceRange }))} />
</SiteLayout>