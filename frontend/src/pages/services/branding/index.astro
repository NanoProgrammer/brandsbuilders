---
import SiteLayout from "../../../layouts/SiteLayout.astro";
import Breadcrumbs from "../../../components/seo/Breadcrumbs.astro";
import ServiceHero from "../../../components/services/ServiceHero.astro";
import Deliverables from "../../../components/services/Deliverables.astro";
import MiniCase from "../../../components/services/MiniCase.astro";
import ScopeDrivers from "../../../components/services/ScopeDrivers.astro";
import FAQ from "../../../components/ui/FAQ.astro";
import CTASection from "../../../components/ui/CTASection.astro";
import ServiceSchema from "../../../components/seo/ServiceSchema.astro";


const title = "Branding Agency Alberta — Identity & Messaging";
const description = "Identity, voice & tone, and a flexible UI system to launch or refresh your brand in Alberta.";
const canonical = "https://brandsbuilders.agency/services/branding";
---
<SiteLayout {title} {description} {canonical} jsonLd={[]}>
<div class="max-w-6xl mx-auto px-6 py-6">
<Breadcrumbs items={[{name:"Home",href:"/"},{name:"Services",href:"/services"},{name:"Branding",href:"/services/branding"}]} />
</div>


<ServiceHero title="Branding agency in Alberta" fromPrice="$1.0k–$1.8k CAD"
bullets={["Logo set & variants","Palette & type pair","Voice, tone & social kit"]} cta={{href:"/contact",label:"Book a call"}} />


<Deliverables items={[
{ title:"Logo & Variants", text:"Horizontal, stacked, mark" },
{ title:"Guidelines", text:"Color, type, spacing, usage" },
{ title:"Messaging", text:"Value prop, headlines, FAQs" }
]} />


<MiniCase title="Refresh for Alberta SMB" kpis={[{label:"CR",value:"+18%"}]} quote="Clarity and consistency improved conversions." />


<ScopeDrivers items={["Depth of system","Number of applications","Speed to launch","Content creation"]} />


<FAQ items={[
{ q:"Do you include templates?", a:"Yes, a pack of 8–12 for social." },
{ q:"File delivery?", a:"Editable sources + exports." }
]} />


<CTASection title="See website packages" cta={{href:"/services#pricing",label:"Compare ranges"}} />


<ServiceSchema name="Branding" description={description} url="/services/branding" priceFrom="$1,000–$1,800 CAD" />
</SiteLayout>