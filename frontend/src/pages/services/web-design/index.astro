---
import SiteLayout from "../../../layouts/SiteLayout.astro";
import Breadcrumbs from "../../../components/seo/Breadcrumbs.astro";
import ServiceHero from "../../../components/services/ServiceHero.astro";
import Deliverables from "../../../components/services/Deliverables.astro";
import MiniCase from "../../../components/services/MiniCase.astro";
import ScopeDrivers from "../../../components/services/ScopeDrivers.astro";
import FAQ from "../../../components/ui/FAQ.astro";
import CTASection from "../../../components/ui/CTASection.astro";
import ServiceSchema from "../../../components/seo/ServiceSchema.astro";


const title = "Web Design Alberta — Fast, CRO‑First Websites";
const description = "Mobile‑first, fast and measurable websites for owner‑led SMBs across Airdrie, Calgary, Edmonton & Red Deer.";
const canonical = "https://brandsbuilders.agency/services/web-design";
---
<SiteLayout {title} {description} {canonical} jsonLd={[]}>
<div class="max-w-6xl mx-auto px-6 py-6">
<Breadcrumbs items={[{name:"Home",href:"/"},{name:"Services",href:"/services"},{name:"Web Design",href:"/services/web-design"}]} />
</div>


<ServiceHero title="Web Design in Alberta" fromPrice="$2.2k–$3.8k CAD"
bullets={["Lighthouse ≥90 mobile","Events & analytics","Accessibility essentials"]} cta={{href:"/contact",label:"Book a call"}} />


<Deliverables items={[
{ title:"Information Architecture", text:"Clear navigation and service mapping" },
{ title:"Templates", text:"Home, service, case, blog & landing" },
{ title:"On‑page SEO", text:"Semantic HTML, metas, schema, internal links" }
]} />


<MiniCase title="Local Services Site (Airdrie)" kpis={[{label:"Leads",value:"+42%"},{label:"LCP",value:"1.9s"}]} quote="Clear offer + speed beats fancy." />


<ScopeDrivers items={["Pages & features","Speed to launch","Media assets","Integrations (bookings, CRM)"]} />


<FAQ items={[
{ q:"Do you use builders?", a:"Astro + Tailwind. No heavy page builders; performance‑first." },
{ q:"Hosting?", a:"Netlify/Vercel; domain & SSL via Cloudflare (we set it up)."}
]} />


<CTASection title="Compare packages" cta={{href:"/services#pricing",label:"See pricing ranges"}} />


<ServiceSchema name="Web Design" description={description} url="/services/web-design" priceFrom="$2,200–$3,800 CAD" />
</SiteLayout>